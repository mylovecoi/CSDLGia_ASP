    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @*{!! Form::open(['url'=>'/signin','id' => 'form-login', 'class'=>'']) !!}*@
        <form asp-controller="DSTaiKhoan" asp-action="KiemTraTaiKhoan" method="post" class="form-horizontal form-validate" id="form-login">
            <p class="form-title"><span style="font-size: 19px;text-align:center;">Đăng nhập hệ thống</span></p>            
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Tài khoản</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control required" type="text" autocomplete="off" placeholder="Tài khoản"
                           name="tenDangNhap" id="tenDangNhap" value="@ViewData["username"]" autofocus />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Mật khẩu</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control required" type="password" autocomplete="off" placeholder="Mật khẩu" 
                           name="matKhau" id="matKhau" />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn red pull-right" id="login_button" onclick="validatePassword();">
                    Đăng nhập <i class="m-icon-swapright m-icon-white"></i>
                </button>
                <br>
            </div>
        </form>
            <div class="create-account">
                <div class="row">
                    <p>
                        Bạn chưa có tài khoản?&nbsp;  <b><a href="~/doanhnghiep/dangky">Đăng ký tài khoản</a></b>
                    </p>
                </div>

                <div class="row">
                    <p>
                        <a href="~/data/huongdan/" target="_blank"><b>Tìm lại mật khẩu</b></a>
                        <a class="pull-right" href="~thongtinhotro" target="_blank"><b>Thông tin hỗ trợ</b></a>
                    </p>
                </div>
                @if (ViewData["ipf2"] != "")
                {
                    <div class="row">
                        <p>
                            <a href="~/data/huongdan/'.$inputs['ipf2'])}}" target="_blank"><b>Tài liệu hướng dẫn đăng ký tài khoản</b></a>
                        </p>
                    </div>
                }
            </div>
    </div>
    <!-- END LOGIN -->
