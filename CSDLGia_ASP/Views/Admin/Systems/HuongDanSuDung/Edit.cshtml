@model CSDLGia_ASP.Models.Systems.HuongDanSuDung
@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}
@section custom_script {
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/jquery-mask.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>

    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged4.init();
        });
    </script>
}
<div class="card card-custom">
    <div class="card-header ribbon ribbon-top ribbon-ver">
        <div class="card-title">
            <h3 class="card-label">
                Tài liệu hướng dẫn sử dụng<small> chỉnh sửa</small>
            </h3>
        </div>
    </div>
    <!--begin::Form-->
    <form asp-controller="HuongDanSuDung" asp-action="Update" method="post" enctype="multipart/form-data" id="frm_hdsd_update">
        <div class="card-body">
            <div class="row">
                <input hidden asp-for="Id" />
                <input hidden asp-for="FileGoc" />
                <input hidden asp-for="FileMau" />
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>STT Sắp xếp</label>
                        <input type="number" asp-for="STTSapxep" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Tên chức năng</label>
                        <input type="text" asp-for="TenChucNang" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <label>Nội dung</label>
                        <input type="text" asp-for="NoiDung" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>
                            File gốc
                            @if (!string.IsNullOrEmpty(Model.FileGoc))
                            {
                                <a href="~/UpLoad/File/HuongDanSuDung/@Model.FileGoc" target="_blank"
                                   onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                                    File gốc hiện tại
                                </a>
                            }
                        </label>
                        <input type="file" asp-for="FileGocUpload" accept=".doc, .pdf, .xlsx, .txt" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>
                            File mẫu
                            @if (!string.IsNullOrEmpty(Model.FileMau))
                            {
                                <a href="~/UpLoad/File/HuongDanSuDung/@Model.FileMau" target="_blank"
                                   onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                                    File mẫu hiện tại
                                </a>
                            }
                        </label>
                        <input type="file" asp-for="FileMauUpload" accept=".doc, .pdf, .xlsx, .txt" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer" style="text-align:center">
            <a asp-controller="HuongDanSuDung" asp-action="Index" class="btn btn-danger">
                <i class="la la-reply"></i>Quay lại
            </a>&ensp;
            <button type="submit" class="btn btn-primary mr-2"><i class="la la-check"></i>Cập nhật</button>
        </div>
    </form>
    <!--end::Form-->
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}