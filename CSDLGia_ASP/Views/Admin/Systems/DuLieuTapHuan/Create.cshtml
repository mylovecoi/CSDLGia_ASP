@model CSDLGia_ASP.Models.Systems.DuLieuTapHuan
@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}
@section custom_script {
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/jquery-mask.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>

    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged4.init();
        });
    </script>
}
<div class="card card-custom">
    <div class="card-header ribbon ribbon-top ribbon-ver">
        <div class="card-title">
            <h3 class="card-label">
                Dữ liệu tập huấn<small> thêm mới</small>
            </h3>
        </div>
    </div>
    <!--begin::Form-->
    <form asp-controller="DuLieuTapHuan" asp-action="Store" method="post" enctype="multipart/form-data" id="frm_hdsd_store">
        <div class="card-body">
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>STT Sắp xếp</label>
                        <input type="number" asp-for="STTSapxep" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Tên chức năng</label>
                        <input type="text" asp-for="TenChucNang" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <label>Nội dung</label>
                        <input type="text" asp-for="NoiDung" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>File gốc</label>
                        <input type="file" asp-for="FileGocUpload" accept=".doc, .pdf, .xlsx, .txt, .rar" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>File mẫu</label>
                        <input type="file" asp-for="FileMauUpload" accept=".doc, .pdf, .xlsx, .txt, .rar" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer" style="text-align:center">
            <a asp-controller="DuLieuTapHuan" asp-action="Index" class="btn btn-danger">
                <i class="la la-reply"></i>Quay lại
            </a>&ensp;
            <button type="submit" class="btn btn-primary mr-2"><i class="la la-check"></i>Thêm mới</button>
        </div>
    </form>
    <!--end::Form-->
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}