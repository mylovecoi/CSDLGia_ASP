<script>
    function Store() {
        $.ajax({
            url: '/DsDiaBan/Store',
            type: 'POST',
            data: {
                TenDiaBan: $('#tendiaban_create').val(),
                PhanLoai: $('#phanloai_create').val()
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success(data.message);
                    location.reload();
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }

    function getId(id, tendiaban) {
        //console.log(id);
        //console.log(tendonvi);
        document.getElementById("id_delete").value = id;
        document.getElementById("tendiaban_delete").innerHTML = tendiaban;
    }

    function editId(id_edit) {
        $.ajax({
            url: '/DsDiaBan/Edit',
            type: 'POST',
            data: {
                Id: id_edit
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Success!");
                    $('#edit_thongtin').replaceWith(data.message);
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }

    function Update() {
        $.ajax({
            url: '/DsDiaBan/Update',
            type: 'POST',
            data: {
                TenDiaBan: $('#tendiaban_edit').val(),
                PhanLoai: $('#phanloai_edit').val(),
                Id: $('#id_edit').val()
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success(data.message);
                    location.reload();
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }
</script>