@{
    Layout = "_LayoutReports";
    var record_id = 1;
}
@model IEnumerable<CSDLGia_ASP.ViewModels.Manages.KeKhaiGia.VMKkGiaCt>

<br />
<br />
<h2 class="page-title" style="text-align: center;text-transform: uppercase">
    Tìm kiếm thông tin kê khai giá dịch vụ lưu trú
</h2>
<br />
<br />
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr>
            <th width="4%" style="text-align:center">STT</th>
            <th style="text-align:center">Tên doanh nghiệp</th>
            <th style="text-align:center">Tên khách sạn</th>
            <th style="text-align:center">Ngày áp dụng mức giá</th>
            <th style="text-align:center">Tên hàng hóa dịch vụ</th>
            <th style="text-align:center">Quy cách chất lượng</th>
            <th style="text-align:center">Đơn vị tính</th>
            <th style="text-align:center">Mức giá hiện hành</th>
            <th style="text-align:center">Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td style="text-align: left;font-weight:bold;">@item.Tendn</td>
                    <td style="text-align: left;font-weight:bold;">@item.Tenks</td>
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.Ngayhieuluc)</td>
                    <td style="text-align: left">@item.Tendvcu</td>
                    <td style="text-align: left">@item.Qccl</td>
                    <td style="text-align: left">@item.Dvt</td>
                    <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Giakk)</td>
                    <td style="text-align: left">@item.Ghichu</td>
                </tr>
            }
        }
    </tbody>
</table>