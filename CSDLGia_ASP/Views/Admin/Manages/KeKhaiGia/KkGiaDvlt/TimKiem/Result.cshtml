@{
    int record_id = 1;
}
@model IEnumerable<CSDLGia_ASP.ViewModels.Manages.KeKhaiGia.VMKkGiaCt>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

    @section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });
    </script>
}

    <div class="card card-custom">
        <div class="card-header flex-wrap border-0 pt-6 pb-0">
            <div class="card-title">
                <h3 class="card-label">
                    Kết quả tìm kiếm hồ sơ
                </h3>
            </div>
        </div>
        <hr />
        <div class="card-body">
            <div class="row">
                <div class="col-xl-9">
                </div>
                <div class="col-xl-3 ">
                    <div class="card-toolbar text-right">
                        <a class="btn btn-primary font-weight-bolder" asp-controller="KkGiaDvlt" asp-action="Printf"
                       asp-route-Nam="@ViewData["Nam"]" asp-route-Tenks="@ViewData["Tenks"]" asp-route-Tenhh="@ViewData["Tenhh"]">
                            <i class="la la-print"></i>In trang
                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover" id="sample_3">
                <thead>
                    <tr style="text-align:center">
                        <th width="4%">#</th>
                        <th>Tên doanh nghiệp</th>
                        <th>Tên khách sạn</th>
                        <th>Ngày áp dụng mức giá</th>
                        <th>Tên hàng hóa dịch vụ</th>
                        <th>Quy cách chất lượng</th>
                        <th>Đơn vị tính</th>
                        <th>Mức giá hiện hành</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            <td style="text-align: left;font-weight:bold;">@item.Tendn</td>
                            <td style="text-align: left;font-weight:bold;">@item.Tenks</td>
                            <td style="text-align: center">@Helpers.ConvertDateToStr(item.Ngayhieuluc)</td>
                            <td style="text-align: left">@item.Tendvcu</td>
                            <td style="text-align: left">@item.Qccl</td>
                            <td style="text-align: left">@item.Dvt</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Giakk)</td>
                            <td style="text-align: left">@item.Ghichu</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="KkGiaDvlt" asp-action="Search" class="btn btn-danger"
           asp-route-Nam="@ViewData["Nam"]" asp-route-Tenks="@ViewData["Tenks"]" asp-route-Tenhh="@ViewData["Tenhh"]">
            <i class="la la-reply"></i>Quay lại
        </a>&ensp;
    </div>
</div>

