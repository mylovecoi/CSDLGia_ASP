@{
    int record_id = 1;
    var mahs = ViewData["Mahs"];
    var ct = (IEnumerable<KkMhBogCt>)ViewData["modelct"];
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th width="2%">#</th>
                    <th>Phân loại hàng<br />hóa dịch vụ</th>
                    <th>Tên hàng hóa,<br />dịch vụ</th>
                    <th>Đơn vị<br />tính</th>
                    <th>Mức giá<br />liền kề</th>
                    <th>Mức giá<br />kê khai</th>
                    <th>Ghi chú</th>
                
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ct)
                {
                    <tr style="text-align:center">
                        <td style="text-align:center">@(record_id++)</td>
                        <td class="active">@item.Plhh</td>
                        <td>@item.Tenhh</td>
                        <td style="text-align:center">@item.Dvt</td>
                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Gialk)</td>
                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Giakk)</td>
                        <td>@item.Ghichu</td>
                    </tr>
                }

            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>
