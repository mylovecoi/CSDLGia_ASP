<!--Excel Modal-->
<div class="modal fade" id="Excel_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-label">
                    Thông tin mặt hàng thuế tài nguyên
                    <span class="d-block text-muted pt-2 font-size-sm">Nhận dữ liệu từ file excel</span>
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>File dữ liệu:</label><br />
                            <input type="file" accept=".xls,.xlsx" id="file_excel" name="file_excel" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>Sheet</label>
                            <input type="number" class="form-control" id="sheet_excel" name="sheet_excel" value="1" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div cla ss="form-group fv-plugins-icon-container">
                            <label>Từ dòng</label>
                            <input type="number" class="form-control" id="linestart_excel" name="linestart_excel" value="3" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>Đến dòng</label>
                            <input type="number" class="form-control" id="linestop_excel" name="linestop_excel" value="111" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                <button type="button" class="btn btn-primary font-weight-bold" onclick="Excel()">Đồng ý</button>
            </div>
        </div>
    </div>
</div>

<script>
    function Store() {
        if ($('#tendv_create').val().trim() == '') {
            toastr.error("Tên đơn vị không được để trống!!!", "Lỗi!");
        } else {
            if ($('#diachi_create').val().trim() == '') {
                toastr.error("Địa chỉ trụ sở không được để trống!!!", "Lỗi!");
            } else {
                if ($('#nguoidaidien_create').val().trim() == '') {
                    toastr.error("Người đại diện không được để trống!!!", "Lỗi!");
                } else {
                    $.ajax({
                        url: '/ThamDinhGia/Donvi/Store',
                        type: 'POST',
                        data: {
                            Tendv: $('#tendv_create').val(),
                            Diachi: $('#diachi_create').val(),
                            Nguoidaidien: $('#nguoidaidien_create').val(),
                            Chucvu: $('#chucvu_create').val(),
                            Sothe: $('#sothe_create').val(),
                            Ngaycap: $('#ngaycap_create').val(),
                            Soqddungtd: $('#soqddungtd_create').val(),
                            Ngaydungtd: $('#ngaydungtd_create').val(),
                        },
                        dataType: 'JSON',
                        success: function (data) {
                            if (data.status == 'success') {
                                toastr.success(data.message);
                                location.reload();
                            } else {
                                toastr.error(data.message, "Lỗi!");
                            }
                        }
                    })
                }
            }
        }
    }

    function getId(id, tendv) {
        document.getElementById("id_delete").value = id;
        document.getElementById("tendv_delete").innerHTML = tendv;
    }

    function editId(id_edit) {
        $.ajax({
            url: '/ThamDinhGia/Donvi/Edit',
            type: 'POST',
            data: {
                Id: id_edit
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Success!");
                    $('#edit_thongtin').replaceWith(data.message);
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }

    function Update() {
        if ($('#tendv_edit').val().trim() == '') {
            toastr.error("Tên đơn vị không được để trống!!!", "Lỗi!");
        } else {
            if ($('#diachi_edit').val().trim() == '') {
                toastr.error("Địa chỉ trụ sở không được để trống!!!", "Lỗi!");
            } else {
                if ($('#nguoidaidien_edit').val().trim() == '') {
                    toastr.error("Người đại diện không được để trống!!!", "Lỗi!");
                } else {
                    $.ajax({
                        url: '/ThamDinhGia/Donvi/Update',
                        type: 'POST',
                        data: {
                            Tendv: $('#tendv_edit').val(),
                            Diachi: $('#diachi_edit').val(),
                            Nguoidaidien: $('#nguoidaidien_edit').val(),
                            Chucvu: $('#chucvu_edit').val(),
                            Sothe: $('#sothe_edit').val(),
                            Ngaycap: $('#ngaycap_edit').val(),
                            Soqddungtd: $('#soqddungtd_edit').val(),
                            Ngaydungtd: $('#ngaydungtd_edit').val(),
                            Id: $('#id_edit').val(),
                        },
                        dataType: 'JSON',
                        success: function (data) {
                            if (data.status == 'success') {
                                toastr.success(data.message);
                                location.reload();
                            } else {
                                toastr.error(data.message, "Lỗi!");
                            }
                        }
                    })
                }
            }
        }
    }

    function Excel() {
        if ($('#file_excel').val() == '') {
            toastr.error("File đính kèm không được để trống!!!", "Lỗi!");
        } else {
            var file = new FormData();
            file.append("FormFile", $("#file_excel")[0].files[0]);
            file.append("Sheet", $("#sheet_excel").val());
            file.append("LineStart", $("#linestart_excel").val());
            file.append("LineStop", $("#linestop_excel").val());

            $.ajax({
                url: '/GiaThueTaiNguyenDmCt/Excel',
                type: 'POST',
                data: file,
                processData: false,
                contentType: false,
                success: function (data) {
                    if (data.status == 'success') {
                        toastr.success("Thêm mới thành công!!!", "Thành công!");
                        location.reload();
                    } else {
                        toastr.error(data.message, "Lỗi!");
                    }
                }
            })
        }
    }
</script>