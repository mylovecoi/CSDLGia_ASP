<!--Excel Modal-->
<form asp-controller="ThamDinhGiaDv" asp-action="ImportExcel" method="post" enctype="multipart/form-data">
    <div class="modal fade" id="Excel_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="card-label">
                        Thông tin đơn vị thẩm định giá
                        <span class="d-block text-muted pt-2 font-size-sm">Nhận dữ liệu từ file excel</span>
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xl-12">
                            <label>File Excel mẫu: </label>
                            <a href="~/UpLoad/File/DinhGia/Excel/FileExcelDSDonVi.xlsx" target="_blank" class="btn btn-link"
                               onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                                <span style="font-weight:bold;">FileExcelDSDonVi.xlsx</span>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-4">
                            <div class="form-group">
                                <label>Sheet*</label>
                                <input type="number" class="form-control" name="Sheet" value="1" />
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="form-group">
                                <label>Nhận từ dòng*</label>
                                <input type="number" class="form-control" name="LineStart" value="4" />
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="form-group">
                                <label>Nhận đến dòng*</label>
                                <input type="number" class="form-control" name="LineStop" value="1000" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label>File dữ liệu</label> <br />
                                <input class="form-group" type="file" accept=".xls,.xlsx" name="FormFile" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    function Store() {
        if ($('#tendv_create').val().trim() == '') {
            toastr.error("Tên đơn vị không được để trống!!!", "Lỗi!");
        } else {
            if ($('#diachi_create').val().trim() == '') {
                toastr.error("Địa chỉ trụ sở không được để trống!!!", "Lỗi!");
            } else {
                if ($('#nguoidaidien_create').val().trim() == '') {
                    toastr.error("Người đại diện không được để trống!!!", "Lỗi!");
                } else {
                    $.ajax({
                        url: '/ThamDinhGia/Donvi/Store',
                        type: 'POST',
                        data: {
                            Tendv: $('#tendv_create').val(),
                            Diachi: $('#diachi_create').val(),
                            Nguoidaidien: $('#nguoidaidien_create').val(),
                            Chucvu: $('#chucvu_create').val(),
                            Sothe: $('#sothe_create').val(),
                            Ngaycap: $('#ngaycap_create').val(),
                            Soqddungtd: $('#soqddungtd_create').val(),
                            Ngaydungtd: $('#ngaydungtd_create').val(),
                        },
                        dataType: 'JSON',
                        success: function (data) {
                            if (data.status == 'success') {
                                toastr.success(data.message);
                                location.reload();
                            } else {
                                toastr.error(data.message, "Lỗi!");
                            }
                        }
                    })
                }
            }
        }
    }

    function getId(id, tendv) {
        document.getElementById("id_delete").value = id;
        document.getElementById("tendv_delete").innerHTML = tendv;
    }

    function editId(id_edit) {
        $.ajax({
            url: '/ThamDinhGia/Donvi/Edit',
            type: 'POST',
            data: {
                Id: id_edit
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    $('#edit_thongtin').replaceWith(data.message);
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }

    function Update() {
        if ($('#tendv_edit').val().trim() == '') {
            toastr.error("Tên đơn vị không được để trống!!!", "Lỗi!");
        } else {
            if ($('#diachi_edit').val().trim() == '') {
                toastr.error("Địa chỉ trụ sở không được để trống!!!", "Lỗi!");
            } else {
                if ($('#nguoidaidien_edit').val().trim() == '') {
                    toastr.error("Người đại diện không được để trống!!!", "Lỗi!");
                } else {
                    $.ajax({
                        url: '/ThamDinhGia/Donvi/Update',
                        type: 'POST',
                        data: {
                            Tendv: $('#tendv_edit').val(),
                            Diachi: $('#diachi_edit').val(),
                            Nguoidaidien: $('#nguoidaidien_edit').val(),
                            Chucvu: $('#chucvu_edit').val(),
                            Sothe: $('#sothe_edit').val(),
                            Ngaycap: $('#ngaycap_edit').val(),
                            Soqddungtd: $('#soqddungtd_edit').val(),
                            Ngaydungtd: $('#ngaydungtd_edit').val(),
                            Id: $('#id_edit').val(),
                        },
                        dataType: 'JSON',
                        success: function (data) {
                            if (data.status == 'success') {
                                toastr.success(data.message);
                                location.reload();
                            } else {
                                toastr.error(data.message, "Lỗi!");
                            }
                        }
                    })
                }
            }
        }
    }

</script>