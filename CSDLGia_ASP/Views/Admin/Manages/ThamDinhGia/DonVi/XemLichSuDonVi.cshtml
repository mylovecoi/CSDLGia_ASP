@{
    Layout = "_LayoutReports";
    int record_id = 1;
}

@model IEnumerable<CSDLGia_ASP.Models.Manages.ThamDinhGia.ThamDinhGiaDvLichSu>

<table width="96%" border="0" cellspacing="0" cellpadding="8" style="margin:0 auto 20px; text-align: center;">
    <tr>
        <td width="40%" style="vertical-align: top;">
            <hr style="width: 10%;vertical-align: top;  margin-top: 2px">
        </td>
        <td style="vertical-align: top;">
            <b>
                CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM<br>
                Độc lập - Tự do - Hạnh phúc
            </b>
            <hr style="width: 15%;vertical-align: top; margin-top: 2px">
        </td>
    </tr>
</table>
<p style="text-align: center; font-weight: bold; font-size: 16px;text-transform:uppercase">
    THÔNG TIN LỊCH SỬ HOẠT ĐỘNG CỦA ĐƠN VỊ THẨM ĐỊNH GIÁ
</p>
<p style="text-align: center; font-size: 16px; font-style:italic">
    Mã giấy chứng nhận: @ViewData["maGCN"]
</p>
<p style="text-align: center; font-size: 16px; font-style:italic">
    Tên đơn vị thẩm định giá: @ViewData["tenDonVi"]
</p>
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr class="text-center">
            <th width="10%" style="text-align: center">STT</th>
            <th style="text-align: center">Số quyết định</th>
            <th style="text-align: center">Ngày quyết định</th>
            <th style="text-align: center">Theo dõi</th>
        </tr>

    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.OrderBy(x => x.NgayQD))
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td>@item.SoQD</td>
                    <td>@Helpers.ConvertDateToStr(item.NgayQD)</td>
                    <td style="text-align: center">@(item.Theodoi == "TD" ? "Theo dõi" : "Ngưng theo dõi")</td>
                </tr>
            }
        }
    </tbody>
</table>
<table width="100%" cellspacing="0" cellpadding="0" border="0" style="margin: 0px auto; border-collapse: collapse;font-size:14px">
    <tr>
        <td width="45%" style="text-align: left">
            <br /><br /><br /><br />
            <span style="font-style:italic; font-weight: bold">Nơi nhận</span><br />
            <span>- UBND tỉnh;</span><br />
            <span>- Bộ tài chính;</span><br />
            <span>- Lưu: VT, QLGCS.</span>
        </td>
        <td width="55%" style="text-align: center">
            <span style="font-weight: bold">
                THỦ TRƯỞNG ĐƠN VỊ
            </span><br />
            <span style="font-style: italic">(Ký tên, đóng dấu)</span><br />
        </td>
    </tr>
    <tr style="text-align: center; height:100px">
        <td colspan="9" style="font-weight: bold; padding-top: 90px"></td>
        <td colspan="9" style="font-weight: bold; padding-top: 90px"></td>
    </tr>
</table>