@{
    Layout = "_LayoutReports";
    int recordId = 0;
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaHhDvkCt>

<table width="96%" border="0" cellspacing="0" cellpadding="8" style="margin:0 auto 20px; text-align: center;">
    <tr>
        <td width="40%" style="vertical-align: top;">
            <hr style="width: 10%;vertical-align: top;  margin-top: 2px">
        </td>
        <td style="vertical-align: top;">
            <b>
                CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM<br>
                Độc lập - Tự do - Hạnh phúc
            </b>
            <hr style="width: 15%;vertical-align: top; margin-top: 2px">
        </td>
    </tr>
    <tr>
        <td style="vertical-align: top;">Số:......</td>
        <td style="text-align: right; vertical-align: top"><i style="margin-right: 25%;">, ngày......tháng......năm......</i></td>
    </tr>
</table>
<p style="text-align: center; font-weight: bold; font-size: 16px;text-transform:uppercase">
    BÁO CÁO<br /> GIÁ THỊ TRƯỜNG HÀNG HÓA, DỊCH VỤ
</p>
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr>
            <th style="text-align: center; font-weight: bold" rowspan="2">STT</th>
            <th style="text-align: center; font-weight: bold" rowspan="2">Mã hàng hóa dịch vụ</th>
            <th style="text-align: center; font-weight: bold" rowspan="2">Tên hàng hóa dịch vụ</th>
            <th style="text-align: center; font-weight: bold" rowspan="2">Đặc điểm kỹ thuật</th>
            <th style="text-align: center; font-weight: bold" rowspan="2">Đơn vị tính</th>
            <th style="text-align: center; font-weight: bold" rowspan="2">Giá hàng hóa, dịch vụ liền kề</th>
            <th style="text-align: center; font-weight: bold" colspan="2">Tăng, giảm</th>
            <th style="text-align: center; font-weight: bold" colspan="2">Ghi chú</th>
        </tr>
        <tr>
            <th>Mức</th>
            <th>%</th>
        </tr>
        <tr style="font-size: 10px">
            <th>1</th>
            <th>2</th>
            <th>3</th>
            <th>4</th>
            <th>5</th>
            <th>6</th>
            <th>7</th>
            <th>8=7-6</th>
            <th>9=8/6</th>
            <th>10</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: left;">@(++recordId)</td>
                    <td style="text-align: left;">@item.Mahhdv</td>
                    <td style="text-align: center">@item.Tenhhdv</td>
                    <td style="text-align: center">@item.Dacdiemkt</td>
                    <td style="text-align: center">@item.Dvt</td>
                    <td style="text-align: right">@Helpers.ConvertDbToStr(item.Gialk)</td>
                    <td style="text-align: right">@Helpers.ConvertDbToStr(item.Gia)</td>
                    <td style="text-align: right">
                        @(
                            (Helpers.ConvertDbToStr(item.Gia) == "0" || Helpers.ConvertDbToStr(item.Gia) == "") ? "" :
                            (
                            (Helpers.ConvertDbToStr(item.Gialk) == "0" || Helpers.ConvertDbToStr(item.Gialk) == "") ? "" :
                            (Helpers.ConvertDbToStr((item.Gia - item.Gialk) / item.Gialk))
                            )
                            )
                    </td>
                    <td style="text-align: right">@item.Ghichu</td>
                </tr>
            }
        }
    </tbody>
</table>
<table width="96%" border="0" cellspacing="0" cellpadding="0" style="margin: 20px auto;text-align: center; height:200px">
    <tr>
        <td width="40%" style="text-align: left; vertical-align: top;">
            <span style="font-weight: bold;font-style: italic">Nơi nhận:</span><br>
            - UBND tỉnh;<br />
            - Bộ tài chính;<br />
            - Lưu: VT, QLGCS.
        </td>
        <td style="vertical-align: top;">
        <td style="vertical-align: top;">

            <p><b>@ViewData["chucvu"]</b></p>
            <i>(Ký tên, đóng dấu)</i>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <p><b>@ViewData["tenthutruong"]</b></p>
        </td>
    </tr>
</table>