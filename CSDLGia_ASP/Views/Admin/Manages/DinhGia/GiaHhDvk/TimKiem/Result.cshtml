@{
    int record_id = 1;
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaHhDvkCt>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

    @section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });
    </script>
}

    <div class="card card-custom">
        <div class="card-header flex-wrap border-0 pt-6 pb-0">
            <div class="card-title">
                <h3 class="card-label">
                    Kết quả tìm kiếm hồ sơ
                </h3>
            </div>
        </div>
        <hr />
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover" id="sample_3">
                <thead>
                    <tr style="text-align:center">
                        <th width="4%">#</th>
                        <th>Đơn vị nhập</th>
                        <th>Thời điểm</th>
                        <th>Nhóm hàng hóa</th>
                        <th>Mã hàng hóa dịch vụ</th>
                        <th>Tên hàng hóa dịch vụ</th>
                        <th>Đặc điểm kỹ thuật</th>
                        <th>Đơn vị tính</th>
                        <th>Giá kỳ trước</th>
                        <th>Giá kỳ này</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            <td>@item.Tendv</td>
                            <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                            <td>@item.Tentt</td>
                            <td style="text-align: center">@item.Mahhdv</td>
                            <td class="text-left active" style="font-weight: bold">@item.Tenhhdv</td>
                            <td>@item.Dacdiemkt</td>
                            <td style="text-align: center">@item.Dvt</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Gialk)</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Gia)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="GiaHhDvk" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>&ensp;
    </div>
</div>

