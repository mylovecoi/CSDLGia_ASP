@{
    int record_id = 1;
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"];
    var dscqcq = (IEnumerable<DsDonVi>)ViewData["Cqcq"];
    var maloaidat = (IEnumerable<DmLoaiDat>)ViewData["Maloaidat"];   
    var mld = ViewData["mld"]!;
    var madv = ViewData["madv"]!;

}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaDatPhanLoaiCt>
@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>
    <script>       
            $(document).ready(function () {
                TableManaged.init();
            });
    </script>
}
<form asp-controller="GiaDatPl" asp-action="Result" method="post" enctype="multipart/form-data" id="frm_dct_result">
    <div class="card-body">
        <div class="mb-3 font-weight-bold font-size-lg">
            <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ</label>
        </div>
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Đơn vị</label>
                    <select class="form-control select2basic" id="madv" name="madv">
                        <option value="All">--Tất cả các đơn vị--</option>
                        @foreach (var db in dsdiaban)
                        {
                            <optgroup label="@db.TenDiaBan">
                                @{
                                    //var company = dsdonvi.Where(t => t.Madiaban == db.MaDiaBan);
                                    var company = dscqcq.Where(t => t.MaDiaBan == db.MaDiaBan);
                                }

                                @foreach (var item in company)
                                {

                                    <!option value="@item.MaDv" @((string)ViewData["madv"] == item.MaDv ? "selected" : "")>&emsp;@item.TenDv</!option>
                                }
                            </optgroup>
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group fv-plugins-icon-container">
                    <label><b>Loại đất</b></label>
                    <select class="form-control select2basic" asp-for"@mld" id="mld" name="mld">
                        <option value="All">--Tất cả các loại đất--</option>
                        @foreach (var item in maloaidat)
                        {
                            <option value="@item.Maloaidat">@item.Loaidat</option>
                        }
                    </select>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Thời gian từ</label>
                    <input type="date" class="form-control" value="@ViewBag.beginTime.ToString("yyyy-MM-dd")" name="beginTime" id="beginTime" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Thời gian đến</label>
                    <input type="date" class="form-control" value="@ViewBag.endTime.ToString("yyyy-MM-dd")" name="endTime" id="endTime" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Giá trị từ</label>
                    <input type="text" class="form-control money" value="@ViewBag.beginPrice" name="beginPrice" id="beginPrice" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Giá trị đến</label>
                    <input type="text" class="form-control money" value="@ViewBag.endPrice" name="endPrice" id="endPrice" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer" style="text-align:center">
        <button type="reset" class="btn btn-secondary"><i class="la la-refresh"></i>Nhập lại</button>&ensp;
        <button type="button" class="btn btn-primary mr-2" onclick="ValidateDct()"><i class="la la-check"></i>Tìm</button>
    </div>
</form>
<table class="table table-striped table-bordered table-hover" id="sample_3">
    <thead>
        <tr style="text-align:center">
            <th style="text-align: center">STT</th>
            <th style="text-align: center">Đơn vị nhập</th>
            <th style="text-align: center">Thời điểm</th>
            <th style="text-align: center">Phân loại dất</th>
            <th style="text-align: center">Vị trí</th>
            <th style="text-align: center">Diện tích</th>
            <th style="text-align: center">Giá trị</th>
            <th style="text-align: center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td style="text-align: center">@item.Tendv</td>
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                    <td style="text-align: center">@item.Loaidat</td>
                    <td style="text-align: center">@item.Vitri</td>
                    <td style="text-align: center">@item.Dientich</td>
                    <td style="text-align: center">@item.Giacuthe</td>
                    <td style="text-align: center">
                        <a asp-controller="GiaDatPl" asp-action="Show" asp-route-Mahs="@item.Mahs" class="btn btn-sm btn-clean btn-icon" title="Xem chi tiết"
                           target="_blank">
                            <i class="icon-lg la la-eye text-success"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">Không có kết quả tìm kiếm!!!</td>
            </tr>
        }
    </tbody>
</table>
<div class="card-footer" style="text-align:center">
    <a asp-controller="GiaDatPl" asp-action="Search" class="btn btn-danger">
        <i class="la la-reply"></i>Quay lại
    </a>
</div>
<script>

    function ValidateDct() {

        var date_tu = new Date($('#beginTime').val());
        var date_den = new Date($('#endTime').val());
        var date_tu_int = date_tu.getTime();

        var date_den_int = date_den.getTime();

        if (date_tu_int > date_den_int) {
            toastr.error("Thời gian nhập đến phải lớn hơn thời gian nhập từ!", "Lỗi!!!")
        } else {
            if ($('#beginPrice').val() > $('#endPrice').val()) {
                toastr.error("Giá trị đến phải lớn hơn Giá trị từ!", "Lỗi!!!")
            } else {
                document.getElementById("frm_dct_result").submit();
            }
        }
    }
</script>




