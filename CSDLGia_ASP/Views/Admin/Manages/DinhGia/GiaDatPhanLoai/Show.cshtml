@model CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaDat
@{
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"];
    var mahs = ViewData["Mahs"];
    int record_id = 1;
}
@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}
    @section custom_script{
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/jquery-mask.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>

    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function() {
            TableManaged4.init();
        });
    </script>
}
    <div class="card card-custom">
        <div class="card-header ribbon ribbon-top ribbon-ver">
            <div class="card-title">
                <h3 class="card-label">
                    Thông tin hồ sơ giá<small>&nbsp;đất cụ thể</small><br />
                    <small style="color: blue;">Mã số thuế: @ViewData["Madv"]</small>
                </h3>
            </div>
        </div>
        <!--begin::Form-->
        <form asp-controller="GiaDatPl" asp-action="Update" method="post" enctype="multipart/form-data" id="frm_dct_update">
            <div class="card-body">
                <input hidden asp-for="Madv" />
                <input hidden asp-for="Mahs" />
                <div class="mb-3 font-weight-bold font-size-lg">
                    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ</label>
                </div>
                <div class="row">
                    <div class="col-xl-4">
                        <div class="form-group">
                            <label>Địa bàn</label>
                            <select class="form-control" id="MaDiaBan" name="MaDiaBan">
                                @foreach (var item in dsdiaban)
                            {
                                <!option value="@item.MaDiaBan" @(@Model.Madiaban==item.MaDiaBan ? "selected" : "" )>@item.TenDiaBan</!option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="form-group">
                        <label>Số quyết định</label>
                        <input type="text" class="form-control" asp-for="Soqd" id="Soqd" />
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="form-group">
                        <label>Thời điểm*</label>
                        <input type="date" class="form-control" asp-for="Thoidiem" id="Thoidiem" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12">
                    <div class="form-group">
                        <label>Thông tin hồ sơ</label>
                        <input type="text" class="form-control" asp-for="Thongtin" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="form-group">
                        <label>Ghi chú</label>
                        <textarea class="form-control" rows="2" cols="50" asp-for="Ghichu"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="form-group">
                        <label class="control-label">File đính kèm</label>
                        <input asp-for="Ipf1" type="file" accept=".jpg,.jpeg,.png" />
                    </div>
                </div>
            </div>
            <div class="card-body" id="frm_data">
                <table class="table table-striped table-bordered table-hover" id="datatable_4">
                    <thead>
                        <tr style="text-align:center">
                            <th>STT</th>
                            <th>Tên đường, giới hạn, khu vực</th>
                            <th>Loại đất</th>
                            <th>Vị trí</th>
                            <th>Giá đất tại bảng giá</th>
                            <th>Giá đất cụ thể</th>
                            <th>Hệ số điều chỉnh</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @if (Model.GiaDatPhanLoaiCt != null)
                            {
                                @foreach (var item in Model.GiaDatPhanLoaiCt)
                                {
                                    <tr>
                                        <td style="text-align:center">@(record_id++)</td>
                                        <td class="active">@item.Khuvuc</td>
                                        <td>@item.Maloaidat</td>
                                        <td>@item.Vitri</td>
                                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Banggiadat)</td>
                                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Giacuthe)</td>
                                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Hesodc)</td>

                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>

        </div>

    </form>
    <!--end::Form-->
</div>
