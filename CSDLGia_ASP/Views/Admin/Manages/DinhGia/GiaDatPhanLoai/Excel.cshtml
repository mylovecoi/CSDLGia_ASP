@model CSDLGia_ASP.Models.Manages.DinhGia.GiaDatPhanLoaiCt

@{
    var Madv = ViewData["Madv"];
  
}

@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}


<div class="card card-custom">
    <div class="card-header ribbon ribbon-top ribbon-ver">
        <div class="card-title">
            <h3 class="card-label">
                @ViewData["Title"]
                <span class="d-block text-muted pt-2 font-size-sm">
                    Quản lý nhận dữ liệu
                </span>
            </h3>
        </div>
    </div>
    <!--begin::Form-->
    <form asp-controller="GiaDatPlExcel" asp-action="Import" method="post" enctype="multipart/form-data">
        <input name="Madv" value="@Madv" />
        <div class="card-body">
            <div class="mb-3 font-weight-bold font-size-lg">
                <label style="text-decoration-line: underline; font-weight: bold">Thông tin file excel dữ liệu mẫu:</label>
                <a href="~/UpLoad/File/DinhGia/Excel/FileExcel.xlsx" target="_blank" class="btn btn-link"
                   onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                    <span style="font-weight:bold;">Link tải file mẫu AH.xlsx</span>
                </a>
            </div>
            <div class="mb-3 font-weight-bold font-size-lg">
                <label style="text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
            </div>
            <div class="row">
                <div class="col-xl-2">
                    <div class="form-group fv-plugins-icon-container">
                        <label style="font-weight: bold; color: blue">Tên đường giới hạn khu vực</label>
                        <select asp-for="Khuvuc" class="form-control">
                            @foreach (var item in Helpers.GetListColExcel())
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        </select>
                        
                    </div>
                </div>
                <div class="col-xl-2">
                    <div class="form-group fv-plugins-icon-container">
                        <label style="font-weight: bold; color: blue">Loại đất</label>
                        <select asp-for="Loaidat" class="form-control">
                            @foreach (var item in Helpers.GetListColExcel())
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-2">
                    <div class="form-group fv-plugins-icon-container">
                        <label style="font-weight: bold; color: blue">Vị trí</label>
                        <select asp-for="Vitri" class="form-control">
                            @foreach (var item in Helpers.GetListColExcel())
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-2">
                    <div class="form-group fv-plugins-icon-container">
                        <label style="font-weight: bold; color: blue">Giá đất tại bảng</label>
                        <select asp-for="Banggiadat" class="form-control">
                            @foreach (var item in Helpers.GetListColExcel())
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-2">
                    <div class="form-group fv-plugins-icon-container">
                        <label style="font-weight: bold; color: blue">Giá đất cụ thể</label>
                        <select asp-for="Giacuthe" class="form-control">
                            @foreach (var item in Helpers.GetListColExcel())
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-2">
                    <div class="form-group fv-plugins-icon-container">
                        <label style="font-weight: bold; color: blue">Hệ số điều chỉnh</label>
                        <select asp-for="Hesodc" class="form-control">
                            @foreach (var item in Helpers.GetListColExcel())
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="mb-3 font-weight-bold font-size-lg">
                <label style="text-decoration-line: underline; font-weight: bold">Thông tin file dữ liệu:</label>
            </div>
            <div class="row">
                <div class="col-xl-3">
                    <div class="form-group">
                        <label>Nhận từ dòng*</label>
                        <input type="number" class="form-control" asp-for="LineStart"  />
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="form-group">
                        <label>Nhận đến dòng*</label>
                        <input type="number" class="form-control" asp-for="LineStop"  />
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="form-group">
                        <label>Sheet*</label>
                        <input type="number" class="form-control" asp-for="Sheet" />
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="form-group">
                        <label>File dữ liệu:</label><br />
                        <input type="file" accept=".xls,.xlsx" asp-for="FormFile" />
                        <span asp-validation-for="FormFile" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer" style="text-align:center">
            <a asp-controller="QuanLyHoSoNCC" asp-action="Index" asp-route-MaHoSo="AH" class="btn btn-danger">
                <i class="la la-reply"></i>Quay lại
            </a>&ensp;
            <button type="reset" class="btn btn-secondary"><i class="la la-refresh"></i>Nhập lại</button>&ensp;
            <button type="submit" class="btn btn-primary mr-2"><i class="la la-check"></i>Nhận dữ liệu</button>
        </div>
    </form>
    <!--end::Form-->
    <!--end::Form-->
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }