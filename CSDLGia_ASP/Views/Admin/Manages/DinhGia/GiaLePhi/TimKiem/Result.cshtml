@{
    Layout = "_LayoutReports";
    int record_id = 1;
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaPhiLePhiCt>

<p style="text-align: center; font-weight: bold; font-size: 30px;">KẾT QUẢ TÌM KIẾM </p>



<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data_render">
    <thead>
        <tr>
            <th style="text-align:center" width="2%">STT</th>
            <th style="text-align:center" width="5%">Đơn vị nhập</th>
            <th style="text-align:center" width="5%">Số QĐ</th>
            <th style="text-align:center" width="5%">Thời điểm</th>
            <th style="text-align:center" width="20%">Mô tả</th>
            <th style="text-align:center">Tên phí, lệ phí</th>
            <th style="text-align:center" width="5%">Phần trăm</th>
            <th style="text-align:center" width="5%">Mức thu</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td style="text-align: center">@item.TenDv</td>
                    <td style="text-align: center">
                        @item.SoQD
                    </td>
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.ThoiDiem)</td>
                    <td style="text-align: left">@item.MoTa</td>
                    <td style="text-align: left">@item.Ptcp</td>
                    <td style="text-align: center">@Helpers.ConvertDbToStr(item.Phantram)</td>
                    <td style="text-align: right">@Helpers.ConvertDbToStr(item.Mucthutu)</td>
                </tr>
            }
        }
    </tbody>
</table>

