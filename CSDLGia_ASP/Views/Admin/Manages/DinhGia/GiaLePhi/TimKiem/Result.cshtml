@{
    int record_id = 1;
 
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["dsdonvi"];

}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaPhiLePhi>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

    @section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>

}
    <script>
        $(document).ready(function() {
            TableManaged.init();
        });
    </script>

    <div class="card card-custom">
        <div class="card-header flex-wrap border-0 pt-6 pb-0">
            <div class="card-title">
                <h3 class="card-label">
                    Kết quả tìm kiếm thông tin giá lệ phí trước bạ
                </h3>
            </div>
        </div>
        <hr />
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover" id="sample_3">
                <thead>
                    <tr style="text-align:center">
                        <th rowspan='2'>STT</th>
                        <td rowspan='2'>Đơn vị nhập</td>
                        <td rowspan='2'>Thời điểm</td>
                        <td rowspan='2'>Mô tả</td>
                        <td rowspan='2'>Phan loại</td>
                        <th rowspan='2'>Tên phí, lệ phí</th>
                        <td rowspan='2'>Phần trăm</td>
                        <th colspan='2'>Mức thu</th>
                    </tr>
                    <tr style="text-align:center">
                        <th>Từ</th>
                        <th>Đến</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>

                            <td style="text-align: center">
                                @foreach (var dv in dsdonvi)
                                {
                                    @if (dv.MaDv == item.Madv)
                                    {
                                        <span style="text-align: center">@dv.TenDv</span>
                                    }
                                }
                            </td>
                            <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                            <td style="text-align: center">@item.Mota</td>
                            <td style="text-align: center">@item.Phanloai</td>
                            <td style="text-align: center">@item.Tennhom</td>
                            <td style="text-align: center">@item.Phantram</td>
                            <td style="text-align: center">@item.Mucthutu</td>
                            <td style="text-align: center">@item.Mucthuden</td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="GiaLePhi" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>
    </div>
</div>





