@{
    Layout = "_LayoutReports";
    int record_id = 1;
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"];
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaPhiLePhi>
<br />
<br />
<p style="text-align: center; font-weight: bold; font-size: 30px;">KẾT QUẢ TÌM KIẾM</p>
<br />
<br />

<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr style="text-align:center">
            <th style="text-align:center">STT</th>
            <td style="text-align:center">Đơn vị nhập</td>
            <td style="text-align:center">Thời điểm</td>
            <td style="text-align:center" width="20%">Mô tả</td>
            <th style="text-align:center">Tên phí, lệ phí</th>
            <td style="text-align:center">Phần trăm</td>
            <th style="text-align:center">Mức thu</th>
        </tr>       
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>

                    <td style="text-align: center">
                        @foreach (var dv in dsdonvi)
                        {
                            @if (dv.MaDv == item.Madv)
                            {
                                <span style="text-align: center">@dv.TenDv</span>
                            }
                        }
                    </td>
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                    <td style="text-align: center">@item.Mota</td>
                    <td style="text-align: left">@item.Tennhom</td>
                    <td style="text-align: center">@item.Phantram</td>
                    <td style="text-align: right">@Helpers.ConvertDbToStr(item.Mucthutu)</td>
                  

                </tr>
            }
        }
    </tbody>
</table>
<div class="card-footer" style="text-align:center">
    <a asp-controller="GiaLePhi" asp-action="Search" class="btn btn-danger">
        <i class="la la-reply"></i>Quay lại
    </a>
</div>


