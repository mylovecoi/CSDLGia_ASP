@{
    int record_id = 1;
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
    var nhomtn = (IEnumerable<GiaGiaoDichBDSNhom>)ViewData["NhomTn"];
    var ngaynhap_tu = ((DateTime)ViewData["ngaynhap_tu"]).ToString("yyyy-MM-dd");
    var ngaynhap_den = ((DateTime)ViewData["ngaynhap_den"]).ToString("yyyy-MM-dd");
    var manhom = ViewData["manhom"];
}
@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}
@section custom_script {
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/jquery-mask.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>

    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged4.init();
        });
    </script>
}
<div class="card card-custom">
    <div class="card-header ribbon ribbon-top ribbon-ver">
        <div class="card-title">
            <h3 class="card-label">
                Tìm kiếm thông tin giá giao dịch bất động sản
            </h3>
            <div class="col-xl-6" style="text-align:right;margin-top: auto">
                <button class="btn btn-primary font-weight-bolder" onclick="Print()">
                    <i class="la la-print"></i>Kết xuất
                </button>
            </div>
        </div>
    </div>
    <!--begin::Form-->
    <form asp-controller="GiaGiaoDichBDS" asp-action="Search" method="get" id="frm_dgthuetn_timkiem">
        <div class="card-body">
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Đơn vị</label>
                        <select class="form-control" id="madv" name="madv">
                            <option value="all">--Tất cả các đơn vị--</option>
                            @foreach (var item in dsdonvi)
                            {
                                <!option value="@item.MaDv" @((string)ViewData["madv"] == item.MaDv ? "selected" : "")>@item.TenDv</!option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Nhóm hàng hóa dịch vụ</label>
                        <select class="form-control" asp-for="@manhom" id="manhom" name="manhom">
                            <option value="all">--Tất cả--</option>
                            @foreach (var nhom in nhomtn)
                            {
                                <option value="@nhom.Manhom">@nhom.Tennhom</option>
                            }                            
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Thời gian nhập từ</label>
                        <input type="date" id="ngaynhap_tu" asp-for="@ngaynhap_tu" name="ngaynhap_tu" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Thời gian nhập đến</label>
                        <input type="date" id="ngaynhap_den" asp-for="@ngaynhap_den" name="ngaynhap_den" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Giá trị từ</label>
                        <input type="text" id="gia_tu" asp-for="@ViewData["gia_tu"]" name="gia_tu" class="form-control money" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Giá trị đến</label>
                        <input type="text" id="gia_den" asp-for="@ViewData["gia_den"]" name="gia_den" class="form-control money" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer" style="text-align:center">
            <button type="button" class="btn btn-danger mr-2" onclick="ValThueTnTk()"><i class="la la-search"></i> Tìm kiếm </button>
        </div>
    </form>
    <!--end::Form-->
</div>
<hr />
<div class="card-body">
    <table class="table table-striped table-bordered table-hover" id="sample_3">
        <thead>
            <tr>
                <th style="text-align: center">STT</th>
                <th style="text-align: center">Đơn vị nhập</th>
                <th style="text-align: center">Thời điểm</th>
                <th style="text-align: center">Phân loại bất động sản</th>
                <th style="text-align: center">Đơn vị tính</th>
                <th style="text-align: center">Giá giao dịch</th>
                <th style="text-align: center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td style="text-align: center">
                        @foreach (var ds in dsdonvi)
                        {
                            @if (item.Madv == ds.MaDv)
                            {
                                @ds.TenDv
                            }
                        }
                    </td>
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                    <td style="text-align: center">@item.Ten</td>
                    <td style="text-align: center">@item.Dvt</td>
                    <td style="text-align: center">@item.Gia</td>
                    <td style="text-align: center">
                        <a asp-controller="GiaGiaoDichBDS" asp-action="Show" asp-route-Mahs="@item.Mahs" class="btn btn-sm btn-clean btn-icon" title="Xem chi tiết"
                           target="_blank">
                            <i class="icon-lg la la-eye text-success"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function ValThueTnTk() {
        var date_tu = new Date($('#ngaynhap_tu').val());
        var date_den = new Date($('#ngaynhap_den').val());
        var date_tu_int = date_tu.getTime();
        var date_den_int = date_den.getTime();

        if (date_tu_int > date_den_int) {
            toastr.error("Thời gian nhập đến phải lớn hơn thời gian nhập từ!", "Lỗi!!!")
        } else {
            if ($('#gia_tu').val() > $('#gia_den').val()) {
                toastr.error("Giá trị đến phải lớn hơn Giá trị từ!", "Lỗi!!!")
            } else {
                document.getElementById("frm_dgthuetn_timkiem").submit();
            }
        }
    }
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}