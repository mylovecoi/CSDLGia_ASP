@{
    Layout = "_LayoutReports";
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"];
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
}

<br />
<br />
@model CSDLGia_ASP.Models.Manages.DinhGia.GiaThueMatDatMatNuoc

<p style="text-align: center; font-weight: bold; font-size: 30px;">THÔNG TIN HỒ SƠ GIÁ THUÊ MẶT ĐẤT MẶT NƯỚC</p>
<p style="text-align: left; font-size: 16px;">Số quyết định:@Model.Soqd</p>
<p style="text-align: left; font-size: 16px;">Địa bàn:
    @foreach (var ds in dsdiaban)
    {
        @if (Model.Madiaban == ds.MaDiaBan)
        {
            @ds.TenDiaBan
        }
    }
</p>
<p style="text-align: left; font-size: 16px;">Thời điểm: @Model.Thoidiem</p>
<p style="text-align: left; font-size: 16px;">Mô tả: @Model.Mota</p>
<p style="text-align: left; font-size: 16px;">Cơ quan tiếp nhận:
    @foreach (var dsonvi in dsdonvi)
    {
        @if (Model.Macqcq == dsonvi.MaDv)
        {
            @dsonvi.TenDv
        }
    }
</p>

<br />
<p style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</p>
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">

    <tr>

        <th style="text-align: center">Loại mặt đất, mặt nước</th>
        <th style="text-align: center">Vị trí</th>
        <th style="text-align: center">Địa giới từ</th>
        <th style="text-align: center">Địa giới đến</th>
        <th style="text-align: center">Mô tả</th>
        <th style="text-align: center">Diện tích</th>
        <th style="text-align: center">Đơn giá</th>
    </tr>
    <tr>
        <td style="text-align: center">@Model.PhanLoaiDatNuoc</td>
        <td style="text-align: center">@Model.Vitri</td>
        <td style="text-align: center">@Model.Diemdau</td>
        <td style="text-align: center">@Model.Diemcuoi</td>
        <td style="text-align: center">@Model.Mota</td>
        <td style="text-align: center">@Model.Dientich</td>
        <td style="text-align: center">@Model.Dongia</td>
    </tr>

</table>
