@{
    int record_id = 1;
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"];
    var dsdiabanAll = (IEnumerable<DsDiaBan>)ViewData["DsDiaBanAll"];
    var dsdonvi = (IEnumerable<VMDsDonVi>)ViewData["DsDonVi"];
    var dsdonvith = (IEnumerable<DsDonVi>)ViewData["DsDonViTh"];
    var dscqcq = (IEnumerable<DsDonVi>)ViewData["DsCqcq"];
    var nhomtn = (IEnumerable<GiaThueMatDatMatNuocNhom>)ViewData["NhomTn"];
    var dsDiaBanApDung = (IEnumerable<Districts>)ViewData["DsDiaBanApDung"];
    int Nam = Int32.Parse(ViewData["Nam"].ToString());
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaThueMatDatMatNuoc>

@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}
@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>
    <script>

        $(document).ready(function () {
            TableManaged.init();
        });

        $(function () {
            $('#Donvi_Search, #Nam_Search').change(function () {
                var current_path_url = '/GiaThueMatDatMatNuoc?';
                var madv = '&Madv=' + $('#Donvi_Search').val();
                var nam = '&Nam=' + $('#Nam_Search').val();
                var url = current_path_url + madv + nam;
                window.location.href = url;
            })
        });
    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                @ViewData["Title"]
                <span class="d-block text-muted pt-2 font-size-sm">
                    Quản lý thông tin hồ sơ giá giá thuê mặt đất mặt nước
                </span>
            </h3>
        </div>
        <div>
            @if (Helpers.CheckPermission(HttpContextAccessor.HttpContext.Session, "csdlmucgiahhdv.dinhgia.thuedatnuoc.thongtin", "Create"))
            {
                @if (ViewData["Madv"].ToString() != "all" && ViewData["Madv"].ToString() != "")
                {
                    <button type="button" data-target="#Create_Modal" data-toggle="modal" class="btn btn-primary font-weight-bolder" title="Thêm mới">
                        <i class="la la-plus"></i>Thêm mới
                    </button>

                    <a class="btn btn-success font-weight-bolder" asp-controller="GiaThueDNExcel" asp-action="Index" asp-route-Madv="@ViewData["Madv"]">
                        <i class="la la-file-excel-o"></i>Nhận dữ liệu
                    </a>
                }
            }
        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">
            <div class="col-xl-3">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Năm</label>
                    <select class="form-control" id="Nam_Search" name="Nam_Search">
                        <option value="0">--Tất cả--</option>
                        @{
                            int nam_start = DateTime.Now.Year - 5;
                            int nam_stop = DateTime.Now.Year + 1;
                            for (int i = nam_start; i <= nam_stop; i++)
                            {
                                <!option value="@i" @(Nam == i ? "selected" : "")>Năm @i</!option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-3">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Đơn vị</label>
                    <select class="form-control select2basic" id="Donvi_Search" name="Donvi_Search">
                        <option value="all">--Tất cả--</option>
                        @foreach (var item in dsdonvi)
                        {
                            <!option value="@item.MaDv" @((string)ViewData["Madv"] == item.MaDv ? "selected" : "")>&emsp;@item.TenDv</!option>
                        }
                    </select>
                </div>

            </div>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th width="2%">STT</th>
                    <th width="10%">Địa bàn</th>
                    <th width="10%">Số QĐ</th>
                    <th width="10%">Thời điểm</th>
                    <th>Mô tả</th>
                    <th width="10%">Trạng thái</th>
                    <th width="10%">Cơ quan tiếp nhận</th>
                    <th width="15%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            <td style="text-align: center">
                                @if (!string.IsNullOrEmpty(item.Madiaban))
                                    @(dsdiabanAll.FirstOrDefault(x => x.MaDiaBan == item.Madiaban)?.TenDiaBan ?? "")
                            </td>
                            <td style="text-align:center">@item.Soqd</td>
                            <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                            <td style="text-align:left">@item.Ghichu</td>
                            <td style="text-align: center">
                                @if (item.Trangthai == "HT")
                                {
                                    <span class="label font-weight-bold label-lg  label-light-info label-inline">Đã hoàn thành và gửi đi</span>
                                }
                                @if (item.Trangthai == "CHT")
                                {
                                    <span class="label font-weight-bold label-lg  label-outline-warning label-inline">Chưa hoàn thành</span>
                                }
                                @if (item.Trangthai == "BTL")
                                {
                                    <span class="label font-weight-bold label-lg  label-light-danger label-inline">Bị trả lại</span>
                                    <p>Lý do:&nbsp;@item.Lydo</p>
                                }
                            </td>
                            <td style="text-align: center">
                                @if (!string.IsNullOrEmpty(item.Macqcq))
                                @(dsdonvith.FirstOrDefault(x => x.MaDv == item.Macqcq)?.TenDv ?? "")
                            </td>
                            <td>
                                <a asp-controller="GiaThueDN" target="_blank" asp-action="Show" asp-route-Mahs="@item.Mahs" class="btn btn-sm btn-clean btn-icon" title="Xem hồ sơ"
                                   target="_blank">
                                    <i class="icon-lg la la-eye text-success"></i>
                                </a>
                                <button type="button" onclick="GetFile('@item.Mahs')" class="btn btn-sm btn-clean btn-icon" title="Giấy tờ kèm theo">
                                    <i class="icon-lg la la-file-alt text-dark"></i>
                                </button>

                                @if (item.Trangthai == "CHT" || item.Trangthai == "BTL")
                                {
                                    <a asp-controller="GiaThueDN" asp-action="Edit" asp-route-Mahs="@item.Mahs" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                        <i class="icon-lg la la-edit text-primary"></i>
                                    </a>

                                    <button type="button" class="btn btn-sm btn-clean btn-icon" title="Hoàn thành" data-toggle="modal" data-target="#Complete_Modal" onclick="SetComplete('@item.Mahs')">
                                        <i class="icon-lg la la-check text-primary"></i>
                                    </button>
                                    @if (Helpers.CheckPermission(HttpContextAccessor.HttpContext.Session, "csdlmucgiahhdv.dg.tmdmn.ttg", "Delete"))
                                    {

                                        <button type="button" class="btn btn-sm btn-clean btn-icon" title="Xóa" data-toggle="modal" data-target="#Delete_Modal" onclick="SetDelete('@item.Id')">
                                            <i class="icon-lg la la-trash text-danger"></i>
                                        </button>
                                    }
                                }
                                <a asp-controller="TrangThaiHoSo" target="_blank" asp-action="Index" asp-route-Mahs="@item.Mahs" class="btn btn-sm btn-clean btn-icon" title="Trạng Thái Hồ Sơ"
                                   target="_blank">
                                    <i class="icon-lg la la-redo-alt text-danger"></i>

                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!--Create Modal-->
<div class="modal fade" id="Create_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form asp-controller="GiaThueDN" asp-action="Create" method="get">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="card-label">
                        Thêm mới hồ sơ giá thuê đất, mặt nước
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <hr />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group fv-plugins-icon-container">
                                <label>Đơn vị báo cáo</label>
                                <select name="Madv" class="form-control">
                                    @foreach (var dv in dsdonvi)
                                    {
                                        <!option value="@dv.MaDv" @((string)@ViewData["Madv"] == dv.MaDv ? "selected" : "")>@dv.TenDv</!option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group fv-plugins-icon-container">
                                <label>Phân loại nhóm hàng hóa dịch vụ</label>
                                <select id="Manhom" name="Manhom" class="form-control">
                                    <option value="all">--Chọn tất cả các nhóm--</option>
                                    @foreach (var nhom in nhomtn)
                                    {
                                        <option value="@nhom.Manhom">@nhom.Tennhom</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Đồng ý</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!--Tổng hợp Modal-->
<div class="modal fade" id="Tonghop_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form asp-controller="GiaXayDungMoi" asp-action="Create" method="get">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="card-label">
                        Tổng hợp hồ sơ giá xây dựng mới
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <hr />
                <table class="table table-striped table-bordered table-hover" id="sample_3">
                    <thead>
                        <tr style="text-align:center">
                            <th width="4%">STT</th>
                            <th>Đơn vị báo cáo</th>
                            <th>Chọn hồ sơ để tổng hợp</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="text-align: center" width="3%">@(record_id++)</td>
                            <td style="text-align: center" width="10%">Sở tài chính</td>
                            <td style="text-align: center" width="12%">
                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Tổng hợp</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!--Delete Modal-->
<div class="modal fade" id="Delete_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="GiaThueDN" asp-action="Delete">
                <div class="modal-header">
                    <h3 class="card-label">
                        Đồng ý xóa thông tin???
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <input id="id_delete" name="id_delete" type="hidden" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-danger font-weight-bold">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--complete Modal-->
<div class="modal fade" id="Complete_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="GiaThueDNHt" asp-action="HoanThanh">
                <div class="modal-header">
                    <h3 class="card-label">
                        Đồng ý hoàn thành hồ sơ?
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <p style="color:blue">Hồ sơ đã hoàn thành sẽ được chuyển lên đơn vị tiếp nhận. Bạn cần liên hệ đơn vị tiếp nhận để chỉnh sửa hồ sơ nếu cần!</p>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">Cơ quan tiếp nhận<span class="require">*</span></label>
                                <select class="form-control select2basic" id="Macqcq" name="Macqcq">
                                    @foreach (var item in dsdonvith)
                                    {
                                        <!option value="@item.MaDv">@item.TenDv</!option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <input id="mahs_complete" name="mahs_complete" type="hidden" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Hoàn thành</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function SetDelete(id) {
        document.getElementById("id_delete").value = id;
    }

    function SetComplete(mahs) {
        document.getElementById("mahs_complete").value = mahs;
    }
</script>
