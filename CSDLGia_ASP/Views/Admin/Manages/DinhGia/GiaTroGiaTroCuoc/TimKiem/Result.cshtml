@{
    Layout = "_LayoutReports";
    int record_id = 1;
    var GiaTroGiaTroCuocDm = (IEnumerable<GiaTroGiaTroCuocDm>)ViewData["GiaTroGiaTroCuocDm"];
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["dsdonvi"];
}
@model IEnumerable<CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaTroGiaTroCuoc>

<br />
<br />
<p style="text-align: center; font-weight: bold; font-size: 30px;">KẾT QUẢ TÌM KIẾM </p>
<br />
<br />

<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr style="text-align:center">
            <th style="text-align: center">STT</th>
            <th style="text-align: center">Đơn vị nhập</th>
            <th style="text-align: center">Thời điểm</th>
            <th style="text-align: center"> Phân loại</th>
            <th style="text-align: center">Tên dịch vụ</th>
            <th style="text-align: center">đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    @foreach (var dv in dsdonvi)
                    {
                        @if (dv.MaDv == item.Madv)
                        {
                            <td style="text-align: center">@dv.TenDv</td>
                        }
                    }
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                    <td style="text-align: center">@item.Phanloai</td>
                    <td style="text-align: center">
                        @if (GiaTroGiaTroCuocDm != null)
                        {
                            @foreach (var dm in GiaTroGiaTroCuocDm)
                            {
                                @if (item.Maspdv == dm.Maspdv)
                                {
                                    <span>@dm.Tenspdv</span>
                                }
                            }
                        }

                    </td>
                    <td style="text-align: center">@item.Dongia</td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="card-footer" style="text-align:center">
    <a asp-controller="TroGiaTroCuoc" asp-action="Search" class="btn btn-danger">
        <i class="la la-reply"></i>Quay lại
    </a>
</div>




