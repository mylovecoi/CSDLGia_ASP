@model CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaTroGiaTroCuoc;

@{
    int record_id = 1;
    var GiaTroGiaTroCuocDm = (IEnumerable<GiaTroGiaTroCuocDm>)ViewData["GiaTroGiaTroCuocDm"];
}

@await Html.PartialAsync("~/Views/Admin/Manages/DinhGia/GiaTroGiaTroCuoc/ThongTinGiayTo/Index.cshtml")

<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">   
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th width="2%">#</th>
                    <th>Tên sản phẩm dịch vụ</th>
                    <th width="10%">Đơn vị tính</th>
                    <th width="10%">Đơn giá</th>
                    <th width="5%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @if (Model.GiaTroGiaTroCuocCt != null)
                    {
                        @foreach (var item in Model.GiaTroGiaTroCuocCt)
                        {
                            <tr>
                                <td style="text-align:center">@(record_id++)</td>
                                <td style="text-align:left">@item.Mota</td>
                                <td style="text-align:left">@item.Dvt</td>
                                <td style="text-align:right">@Helpers.ConvertDbToStr(item.Dongia)</td>
                                <td>
                                    <button type="button" data-target="#Edit_Modal" data-toggle="modal"
                                            onclick="SetEdit(@item.Id)" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                        <i class="icon-lg la la-edit text-primary"></i>
                                    </button>

                                </td>
                            </tr>
                        }

                    }
                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>
@await Html.PartialAsync("~/Views/Admin/Manages/DinhGia/GiaTroGiaTroCuoc/Modal.cshtml")