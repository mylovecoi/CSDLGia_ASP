@{
    Layout = "_LayoutReports";
    int record_id = 1;

}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaThueTaiNguyenCt>
<br />
<br />
<p style="text-align: center; font-weight: bold; font-size: 30px;">KẾT QUẢ TÌM KIẾM </p>
<br />
<br />

<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">

    <thead>
        <tr style="text-align:center">
            <th width="4%">STT</th>
            <th>Đơn vị nhập</th>
            <th>Thời điểm</th>
            <th>Nhóm tài nguyên</th>
            <th>Tên tài nguyên</th>
            <th>Đơn vị tính</th>
            <th>Giá kỳ này</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td style="text-align: center">@item.Tendv</td>
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                    <td style="text-align: center">@item.Tennhom</td>
                    <td style="text-align: center">@item.Ten</td>
                    <td style="text-align: center">@item.Dvt</td>
                    <td style="text-align: center">@Helpers.ConvertDbToStr(item.Gia)</td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="card-footer" style="text-align:center">
    <a asp-controller="GiaThueTaiNguyen" asp-action="Search" class="btn btn-danger">
        <i class="la la-reply"></i>Quay lại
    </a>&ensp;
</div>





