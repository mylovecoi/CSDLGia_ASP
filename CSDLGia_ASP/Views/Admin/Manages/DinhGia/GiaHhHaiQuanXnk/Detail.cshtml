@model CSDLGia_ASP.Models.Manages.DinhGia.GiaHhHaiQuanXnk

@{
    int record_id = 1;
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>
        <div class="card-toolbar">
            <button type="button" data-target="#Modal_Create" data-toggle="modal"
                    class="btn btn-primary font-weight-bolder" title="Create">
                <i class="la la-plus"></i>Thêm mới
            </button>
        </div>
    </div>
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th width="2%">STT</th>
                    <th>Tên hàng hoá</th>
                    <th>Đơn vị tính</th>
                    <th>Giá trước thuế</th>
                    <th>Thuế(%)</th>
                    <th>Giá sau thuế</th>
                    <th width="15%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.GiaHhHaiQuanXnkCt != null)
                {
                    @foreach (var item in Model.GiaHhHaiQuanXnkCt)
                    {
                        <tr>
                            <td class="text-center">@(record_id++)</td>
                            <td class="text-center">@item.TenHh</td>
                            <td class="text-center">@item.Dvt</td>
                            <td class="text-center">@item.GiaTruocThue</td>
                            <td class="text-center">@item.TenThue: @item.PhanTramThue%</td>
                            <td class="text-center">@item.GiaSauThue</td>
                            <td>
                                <button type="button" data-target="#Edit_Modal" data-toggle="modal" class="btn btn-sm btn-clean btn-icon"
                                        onclick="SetEdit('@item.Id')" title="Sửa">
                                    <i class="icon-lg la la-edit text-warning"></i>
                                </button>
                                <button type="button" data-target="#Delete_Modal" data-toggle="modal" class="btn btn-sm btn-clean btn-icon"
                                        onclick="GetDelete('@item.Id')" title="Xoá">
                                    <i class="icon-lg la la-trash text-danger"></i>
                                </button>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@await Html.PartialAsync("~/Views/Admin/Manages/DinhGia/GiaHhHaiQuanXnk/Modal.cshtml")
