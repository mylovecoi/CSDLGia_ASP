@model CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaDvKcb
@{
    var DsDonVi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
    var dsnhom = (IEnumerable<GiaDvKcbNhom>)ViewData["GiaDvKcbNhom"];
    int record_id = 1;
}
@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}
@section custom_script{
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/jquery-mask.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>

    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged4.init();
        });
    </script>
}
<div class="card card-custom">
    <div class="card-header ribbon ribbon-top ribbon-ver">
        <div class="card-title">
            <h3 class="card-label">
                chỉnh sửa hồ sơ giá<small>&nbsp;dịch vụ khám chữa bệnh</small><br />
            </h3>
        </div>
    </div>
    <!--begin::Form-->
    <form asp-controller="DvKhamChuaBenh" asp-action="Update" method="post" enctype="multipart/form-data" id="frm_kcb_store">
        <div class="card-body">
            <div class="mb-3 font-weight-bold font-size-lg">
                <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ</label>
            </div>
            @*         <input asp-for="Madv" />
            <input asp-for="Manhom" />
            <input asp-for="Mahs" />
            *@
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Danh mục khám chữa bệnh*</label>
                        <select id="Manhom" name="Manhom" class="form-control" disabled>
                            @foreach (var item in dsnhom)
                            {
                                <!option value="@item.Manhom" @(item.Manhom == Model.Manhom ? "selected" :"" ) >@item.Tennhom</!option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Địa bàn*</label>
                        <select id="Madv" name="Madv" class="form-control" disabled>
                            @foreach (var item in DsDonVi)
                            {
                                <!option value="@item.MaDv" @(item.MaDv == Model.Madv ? "selected" :"" ) >@item.TenDv</!option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Số QĐ*</label>
                        <input type="text" class="form-control" asp-for="Soqd" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Thời điểm*</label>
                        <input type="date" class="form-control" asp-for="Thoidiem" />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <label>Mô tả*</label>
                        <input type="text" class="form-control" asp-for="Mota" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label class="control-label">File đính kèm</label>
                        <input asp-for="Ipf1" type="file" accept=".jpg,.jpeg,.png" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label class="control-label">File đính kèm</label>
                        <input asp-for="Ipf2" type="file" accept=".jpg,.jpeg,.png" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label class="control-label">File đính kèm</label>
                        <input asp-for="Ipf3" type="file" accept=".jpg,.jpeg,.png" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label class="control-label">File đính kèm</label>
                        <input asp-for="Ipf4" type="file" accept=".jpg,.jpeg,.png" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label class="control-label">File đính kèm</label>
                        <input asp-for="Ipf5" type="file" accept=".jpg,.jpeg,.png" />
                    </div>
                </div>
            </div>


            <div class="card-body" id="frm_data">
                <table class="table table-striped table-bordered table-hover" id="datatable_4">
                    <thead>
                        <tr style="text-align:center">
                            <th>STT</th>
                            <th>Mã dịch vụ</th>
                            <th>Tên dịch vụ</th>
                            <th>Đơn vị <br /> tính</th>
                            <th>Đơn giá</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model.GiaDvKcbCt)
                            {
                                <tr>
                                    <td style="text-align:center">@(record_id++)</td>
                                    <td style="text-align:center">@item.Madichvu</td>
                                    <td style="text-align:center">@item.Tenspdv</td>
                                    <td style="text-align:center">@item.Dvt</td>
                                    <td style="text-align:center">@item.Giadv</td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>


        </div>
    </form>
    <!--end::Form-->
</div>

