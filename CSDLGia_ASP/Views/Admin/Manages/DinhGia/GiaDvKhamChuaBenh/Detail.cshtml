@*
    @model CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaDvKcb;*@
@{
    int record_id = 1;
    var mahs = ViewData["Mahs"];
    var GiaDvKcbCt = (IEnumerable<GiaDvKcbCt>)ViewData["GiaDvKcbCt"];
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th>STT</th>
                    <th>Mã dịch vụ</th>
                    <th>Tên dịch vụ</th>
                    <th>Đơn vị <br /> tính</th>
                    <th>Đơn giá</th>
                    <th width="8%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model.GiaDvKcbCt)
                    {
                        <tr>
                            <td style="text-align:center">@(record_id++)</td>
                            <td style="text-align:center">@item.Madichvu</td>
                            <td style="text-align:center">@item.Tenspdv</td>
                            <td style="text-align:center">@item.Dvt</td>
                            <td style="text-align:center">@item.Giadv</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="kê khai" data-toggle="modal"
                                data-target="#Edit_Modal" onclick="SetEdit(@item.Id)">
                                    <i class="icon-lg la la-edit text-warning"></i>
                                </button>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>

<!--Edit Modal-->
<div class="modal fade" id="Edit_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-label text-dark">
                    Chỉnh sửa thông tin giá
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body"  id="edit_thongtin">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                <button type="button" class="btn btn-primary font-weight-bold" onclick="SetUpdate()">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<script>
    function SetEdit(id_edit) {
        $.ajax({
            url: '/DinhGiaDvKcb/EditCt',
            type: 'POST',
            data: {
                Id: id_edit
            },

            dataType: 'JSON',
            success: function(data) {
                if (data.status == 'success') {
                    //toastr.success("Success!");
                    $('#edit_thongtin').replaceWith(data.message);
                    //MoneyMask();
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }

    function SetUpdate() {
        var gia = $('#Giadv_edit').val().replace(',','');
        $.ajax({
            url: '/DinhGiaDvKcb/UpdateCt',
            type: 'POST',
            data: {
                Giadv: gia,
                Id: $('#id_edit').val()
            },
            dataType: 'JSON',
            success: function(data) {
                if (data.status == 'success') {
                    toastr.success("Cập nhật thông tin thành công!", "Thành công");
                    $('#frm_data').replaceWith(data.message);
                    $(document).ready(function() {
                        TableManaged4.init();
                    });
                    $('#Edit_Modal').modal("hide");
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }

</script>