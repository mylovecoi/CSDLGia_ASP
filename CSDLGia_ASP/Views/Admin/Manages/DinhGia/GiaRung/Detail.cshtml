@model CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaRung
@{
    int record_id = 1;
    var mahs = ViewData["Mahs"];
    var loairung = (IEnumerable<GiaRungDm>)ViewData["Loairung"];
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>
        <div class="card-toolbar">
            <button type="button" data-target="#Create_Modal" data-toggle="modal"
                    class="btn btn-primary font-weight-bolder" title="Create">
                <i class="la la-plus"></i>Thêm mới
            </button>
        </div>
    </div>
    <hr />
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th>STT</th>
                    <th>Phân loại( Detail)</th>
                    <th>Loại rừng</th>
                    <th>Đơn vị khai thác(thuê)</th>
                    <th>Nội dung chi tiết</th>
                    <th>Diện tích rừng</th>
                    <th>Diện tích sử dụng</th>
                    <th>Đơn vị tính</th>
                    <th>Giá trị</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @if (Model.GiaRungCt != null)
                    {
                        @foreach (var item in Model.GiaRungCt)
                        {
                            <tr>
                                <td style="text-align:center">@(record_id++)</td>
                                <td style="text-align:center">@item.Phanloai</td>
                                <td style="text-align:center">
                                    @foreach (var lr in loairung)
                                    {
                                        @if (item.Manhom == lr.Manhom)
                                        {
                                            <span>@lr.Tennhom</span>
                                        }
                                    }
                                </td>
                                <td style="text-align:center">@item.Dvthue</td>
                                <td style="text-align:center">@item.Noidung</td>
                                <td style="text-align:center">@item.Dientich</td>
                                <td style="text-align:center">@item.Dientichsd</td>
                                <td style="text-align:center">@item.Dvt</td>
                                <td style="text-align:right">@Helpers.ConvertDbToStr(item.Giatri)</td>
                                <td style="text-align:center">

                                    <button type="button" data-target="#Edit_Modal" data-toggle="modal"
                                onclick="SetEdit(@item.Id)" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                        <i class="icon-lg la la-edit text-primary"></i>
                                    </button>

                                    <button type="button" data-target="#Delete_Modal" data-toggle="modal"
                                onclick="GetDelete('@item.Id')" class="btn btn-sm btn-clean btn-icon" title="Xóa">
                                        <i class="icon-lg la la-trash text-danger"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>
@await Html.PartialAsync("~/Views/Admin/Manages/DinhGia/GiaRung/Modal.cshtml")