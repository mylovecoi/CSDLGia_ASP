<script>
    function submitTH() {
        var form = document.getElementById('frm_report_th');
        form.submit();
        location.reload();
    }

    function submitCT() {
        var form = document.getElementById('frm_report_ct');
        form.submit();
        location.reload();
    }

    function op1() {
        document.getElementById("moitruong").selected = 'selected';
    }
    function op2() {
        document.getElementById("khaithac").selected = 'selected';
    }

    function valedate() {
        var T1 = $('#tungay').val().trim();
        var T2 = $('#denngay').val().trim();
        if (T1 != "" && T2 != "") {
            if (T1 > T2) {
                toastr.error("Thời gian báo cáo kết thúc phải lớn hơn thời gian báo cáo bắt đầu!", "Lỗi!!!")
            }
            else if (T1 <= T2) {
                document.getElementById("frm_report").submit();
                location.reload();
            }
        }
        else {
            document.getElementById("frm_report").submit();
            location.reload();
        }

    }
</script>