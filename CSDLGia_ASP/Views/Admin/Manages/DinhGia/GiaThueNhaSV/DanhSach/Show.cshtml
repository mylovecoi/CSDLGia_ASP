@{
    Layout = "_LayoutReports";
}
@model CSDLGia_ASP.Models.Manages.DinhGia.GiaThueNhaSV

<table width="96%" border="0" cellspacing="0" cellpadding="8" style="margin:0 auto 20px; text-align: center;">
    <tr>
        <td width="40%" style="vertical-align: top;">
            <hr style="width: 10%;vertical-align: top;  margin-top: 2px">
        </td>
        <td style="vertical-align: top;">
            <b>
                CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM<br>
                Độc lập - Tự do - Hạnh phúc
            </b>
            <hr style="width: 15%;vertical-align: top; margin-top: 2px">
        </td>
    </tr>
    <tr>
        <td style="vertical-align: top;">Số:......</td>
        <td style="text-align: right; vertical-align: top"><i style="margin-right: 25%;">, ngày..@Model.Thoidiem.Day..tháng..@Model.Thoidiem.Month..năm..@Model.Thoidiem.Year..</i></td>
    </tr>
</table>
<p style="text-align: center; font-weight: bold; font-size: 16px;text-transform:uppercase">
    BẢNG GIÁ TÍNH THUẾ TÀI NGUYÊN
</p>
<p style="text-align: center; font-size: 16px; font-style:italic">
    (Ban hành kèm theo Quyết định số 1 ngày 12 tháng 08 năm 2022)
</p>
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr>
            <th style="text-align: center; font-weight: bold" colspan="5" width="36%">Mã nhóm, loại tài nguyên</th>
            <th style="text-align: center; font-weight: bold" rowspan="2" width="50%">Tên nhóm, loại tài nguyên</th>
            <th style="text-align: center; font-weight: bold" rowspan="2" width="4%">Đơn vị tính</th>
            <th style="text-align: center; font-weight: bold" rowspan="2" width="10%">Giá tính thuế tài nguyên (đồng)</th>
        </tr>
        <tr>
            <th style="text-align: center; font-weight: bold">Cấp I</th>
            <th style="text-align: center; font-weight: bold">Cấp II</th>
            <th style="text-align: center; font-weight: bold">Cấp III</th>
            <th style="text-align: center; font-weight: bold">Cấp IV</th>
            <th style="text-align: center; font-weight: bold">Cấp V</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.GiaThueNhaSVCt.Count() > 0)
        {
            @foreach (var item in Model.GiaThueNhaSVCt)
            {
                <tr>
                    <td style="text-align: center;">@item.Cap1</td>
                    <td style="text-align: center;">@item.Cap2</td>
                    <td style="text-align: center;">@item.Cap3</td>
                    <td style="text-align: center;">@item.Cap4</td>
                    <td style="text-align: center;">@item.Cap5</td>
                    <td style="text-align: left;">@item.Ten</td>
                    <td style="text-align: center">@item.Dvt</td>
                    <td style="text-align: right">@Helpers.ConvertDbToStr(item.Gia)</td>
                </tr>
            }
        }
    </tbody>
</table>
<table width="100%" cellspacing="0" cellpadding="0" border="0" style="margin: 0px auto; border-collapse: collapse;font-size:14px">
    <tr>
        <td width="45%" style="text-align: left">
            <br /><br /><br /><br />
            <span style="font-style:italic; font-weight: bold">Nơi nhận</span><br />
            <span>- UBND tỉnh;</span><br />
            <span>- Bộ tài chính;</span><br />
            <span>- Lưu: VT, QLGCS.</span>
        </td>
        <td width="55%" style="text-align: center">
            <span style="font-weight: bold">
                THỦ TRƯỞNG ĐƠN VỊ
            </span><br />
            <span style="font-style: italic">(Ký tên, đóng dấu)</span><br />
        </td>
    </tr>
    <tr style="text-align: center; height:100px">
        <td colspan="9" style="font-weight: bold; padding-top: 90px"></td>
        <td colspan="9" style="font-weight: bold; padding-top: 90px"></td>
    </tr>
</table>