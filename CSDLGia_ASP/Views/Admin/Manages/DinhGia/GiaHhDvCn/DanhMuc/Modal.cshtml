<script>

    function Dvt() {
        $('#Dvt_Modal').modal('hide');
        var gt = $('#dvt_add').val();
        $('#dvt_create').append(new Option(gt, gt, true, true));
        $('#dvt_create').val(gt).trigger('change');
    }


    function Dvtedit() {
        $('#Dvt_Modal_edit').modal('hide');
        var gt = $('#dvt_addedit').val();
        $('#dvt_edit').append(new Option(gt, gt, true, true));
        $('#dvt_edit').val(gt).trigger('change');
    }

    function Store() {
        if ($('#tennhom_create').val().trim() == '') {
            toastr.error("Tên nhóm tài nguyên không được để trống!!!", "Lỗi!");
        } else {
            $.ajax({
                url: '/GiaHhDvCnDm/Store',
                type: 'POST',
                data: {
                    Tennhom: $('#tennhom_create').val(),
                    Dvt: $('#dvt_create').val(),
                    Mota: $('#mota_create').val(),
                },
                dataType: 'JSON',
                success: function (data) {
                    if (data.status == 'success') {
                        toastr.success(data.message);
                        location.reload();
                    } else {
                        toastr.error(data.message, "Lỗi!");
                    }
                }
            })
        }
    }

    function getId(id, tennhom) {
        document.getElementById("id_delete").value = id;
        document.getElementById("tennhom_delete").innerHTML = tennhom;
    }

    function editId(id_edit) {
        $.ajax({
            url: '/GiaHhDvCnDm/Edit',
            type: 'POST',
            data: {
                Id: id_edit
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Success!");
                    $('#edit_thongtin').replaceWith(data.message);
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }

    function Update() {
        if ($('#tennhom_edit').val().trim() == '') {
            toastr.error("Tên nhóm tài nguyên không được để trống!!!", "Lỗi!");
        } else {
            $.ajax({
                url: '/GiaHhDvCnDm/Update',
                type: 'POST',
                data: {
                    Tennhom: $('#tennhom_edit').val(),
                    Mota: $('#mota_edit').val(),
                    Dvt: $('#dvt_edit').val(),
                    Id: $('#id_edit').val()
                },
                dataType: 'JSON',
                success: function (data) {
                    if (data.status == 'success') {
                        toastr.success(data.message);
                        location.reload();
                    } else {
                        toastr.error(data.message, "Lỗi!");
                    }
                }
            })
        }
    }


   

</script>