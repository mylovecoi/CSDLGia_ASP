@model CSDLGia_ASP.Models.Manages.DinhGia.GiaHhDvCn
@{
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"];    
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
    Layout = "_LayoutReports";
}


<p style="text-align: center; font-weight: bold; font-size: 30px;text-transform:uppercase">THÔNG TIN hồ sơ giá sản phẩm giá hàng hóa, dịch vụ khác theo quy định của pháp luật chuyên ngành</p>
<p style="text-align: left; font-size: 16px;">Số quyết định: @Model.Soqd</p>

<p style="text-align: left; font-size: 16px;">
    Thời điểm: @Helpers.ConvertDateToStr(Model.Thoidiem)
</p>
<p style="text-align: left; font-size: 16px;">Mô tả: @Model.Ttqd</p>
<br />
<p style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</p>
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr >
            <th style="text-align:center">STT</th>
            <th style="text-align:center">Tên sản phẩm, dịch vụ</th>
            <th style="text-align:center">Đơn vị tính</th>
            <th style="text-align:center">Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @if (Model.GiaHhDvCnCt != null)
            {
                @foreach (var item in Model.GiaHhDvCnCt.OrderBy(x=>x.Sapxep))
                {
                    <tr>
                        <td style="text-align:center" width="10%">@item.HienThi</td>
                        <td>@item.Tenspdv</td>
                        <td style="text-align:center">@item.Dvt</td>
                        <td style="text-align:center">@Helpers.ConvertDbToStr(item.Dongia)</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>