<form asp-controller="GiaDatDiaBan" asp-action="Search" method="get" id="frm_dct_result">
    <div class="card-body">
        <div class="mb-3 font-weight-bold font-size-lg">
            <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ</label>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Đơn vị</label>
                    <select class="form-control" id="madv" name="madv">
                        <option value="all">--Tất cả các đơn vị--</option>
                        @foreach (var db in dsdiaban)
                        {
                            <optgroup label="@db.TenDiaBan">
                                @{
                                    var company = dscqcq.Where(t => t.MaDiaBan == db.MaDiaBan);
                                }

                                @foreach (var item in company)
                                {

                                    <!option value="@item.MaDv" @((string)ViewData["madv"] == item.MaDv ? "selected" : "")>&emsp;@item.TenDv</!option>
                                }
                            </optgroup>
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Số quyết định</label>
                    <input asp-for="@soQuyetDinh" class="form-control" name="soQuyetDinh" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Thời gian từ</label>
                    <input type="date" asp-for="@beginTime" class="form-control" name="beginTime" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Thời gian đến</label>
                    <input type="date" asp-for="@endTime" class="form-control" name="endTime" id="endTime" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Loại đường</label>
                    <input type="text" asp-for="@loaiDuong" class="form-control" name="loaiDuong" />
                </div>
            </div>            
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Mô tả</label>
                    <input asp-for="@moTa" class="form-control" name="moTa" />
                </div>
            </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Đơn giá từ</label>
                        <input type="text" class="form-control" name="heSoK" />
                    </div>
                </div>
        </div>
    </div>
    <div class="card-footer" style="text-align:center">
        <button type="button" class="btn btn-danger mr-2" onclick="ValidateDct()"><i class="la la-search"></i>Tìm kiếm</button>
    </div>
</form>
</div>
