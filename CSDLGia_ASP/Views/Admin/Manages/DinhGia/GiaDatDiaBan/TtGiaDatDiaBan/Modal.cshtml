<!--Edit modal-->

<div class="modal fade" id="Edit_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-label">
                   Thông tin quyết định quy định giá đất
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="edit_thongtin">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                <button type="button" class="btn btn-primary font-weight-bold" onclick="Update()">Cập nhật</button>
            </div>
        </div>
    </div>
</div>


<script>

    //Thêm mới

    function Store() {
        if ($('#soqd_create').val().trim() == '') {
            toastr.error("Số quyết định không được để trống!!!", "Lỗi!");
        } else {
            var file = new FormData();
            file.append("Ipf1upload", $("#ipf1_create")[0].files[0]);
            file.append("Soqd", $("#soqd_create").val());
            file.append("Mota", $("#mota_create").val());
            file.append("Ngayqd_apdung", $("#ngayqd_apdung_create").val());
            file.append("Ngayqd_banhanh", $("#ngayqd_banhanh_create").val());
            $.ajax({
                url: '/TtGiaDatDiaBan/Store',
                type: 'POST',
                data: file,
                processData: false,
                contentType: false,
                dataType: 'JSON',
                success: function (data) {
                    if (data.status == 'success') {
                        toastr.success(data.message);
                        location.reload();
                    } else {
                        toastr.error(data.message, "Lỗi!");
                    }
                }
            })
        }
    }

    //Xóa
    function getId(id) {
        document.getElementById("id_delete").value = id;
    }

    //Sửa

    function editId(id_edit) {
        $.ajax({
            url: '/TtGiaDatDiaBan/Edit',
            type: 'POST',
            data: {
                Id: id_edit
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Success!");
                    $('#edit_thongtin').replaceWith(data.message);
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }

    // Cập nhật

    function Update() {
        if ($('#soqd_edit').val().trim() == '') {
            toastr.error("Số quyết định không được để trống!!!", "Lỗi!");
        } else {
            var file = new FormData();
            file.append("Id", $("#id_edit").val());
            file.append("Ipf1upload", $("#ipf1_edit")[0].files[0]);
            file.append("Soqd", $("#soqd_edit").val());
            file.append("Mota", $("#mota_edit").val());
            file.append("Ngayqd_apdung", $("#ngayqd_apdung_edit").val());
            file.append("Ngayqd_banhanh", $("#ngayqd_banhanh_edit").val());
            $.ajax({
                url: '/TtGiaDatDiaBan/Update',
                type: 'POST',
                data: file,
                processData: false,
                contentType: false,
                dataType: 'JSON',
                success: function (data) {
                    if (data.status == 'success') {
                        toastr.success(data.message);
                        location.reload();
                    } else {
                        toastr.error(data.message, "Lỗi!");
                    }
                }
            })
        }
    }

</script>