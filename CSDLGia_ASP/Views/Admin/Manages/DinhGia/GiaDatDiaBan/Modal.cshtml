                        <div class="form-group fv-plugins-icon-container">
                            <label>Hệ số K</label>
                            <input type="number" step="0.1" id="hesok_create" name="hesok_create" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>Giá vị trí I</label>
                            <input type="number" step="0.1" id="giavt1_create" name="giavt1_create" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>Giá vị trí II</label>
                            <input type="number" step="0.1" id="giavt2_create" name="giavt2_create" class="form-control" />
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>Giá vị trí III</label>
                            <input type="number" step="0.1" id="giavt3_create" name="giavt3_create" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>Giá vị trí IV</label>
                            <input type="number" step="0.1" id="giavt4_create" name="giavt4_create" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>Giá vị trí V</label>
                            <input type="number" step="0.1" id="giavt5_create" name="giavt5_create" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>STT báo cáo</label>
                            <input type="text" id="hienthi_create" name="hienthi_create" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group fv-plugins-icon-container">
                            <label>Sắp xếp</label>
                            <input type="number" step="0.1" id="sapxep_create" name="sapxep_create" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                <button type="button" class="btn btn-primary font-weight-bold" onclick="SetStore()">Thêm mới</button>
            </div>
        </div>
    </div>
</div>

