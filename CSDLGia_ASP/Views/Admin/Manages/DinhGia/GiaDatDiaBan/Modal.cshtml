</div>

<div class="modal fade" id="Khuvuc_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-label text-dark">
                    Khu vực (Tên đường, tên phố)
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-12">
                        <input id="khuvuc_add" class="form-control" name="khuvuc_add" type="text">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-default">Hủy thao tác</button>
                <button type="button" class="btn btn-primary font-weight-bold" onclick="Khuvuc()">Đồng ý</button>
            </div>
        </div>
    </div>
</div>

<script>

    //Thêm khu vực
    function Khuvuc() {
        $('#Khuvuc_Modal').modal('hide');
        var gt = $('#khuvuc_add').val();
        $('#khuvuc_create').append(new Option(gt, gt, true, true));
        $('#khuvuc_create').val(gt).trigger('change');
    }
    //Thêm
    function SetStore() {
        $.ajax({
            url: '/GiaDatDiaBanCt/Store',
            type: 'POST',
            data: {
                Mahs: $('#Mahs').val(),
                Maloaidat: $('#maloaidat_create').val(),
                MoTa: $('#mota_create').val(),
                Diemdau: $('#diemdau_create').val(),
                Diemcuoi: $('#diemcuoi_create').val(),
                Loaiduong: $('#loaiduong_create').val(),
                Hesok: $('#hesok_create').val().replace(/\,/g, '.'),
                Giavt1: $('#giavt1_create').val().replace(/\,/g, '.'),
                Giavt2: $('#giavt2_create').val().replace(/\,/g, '.'),
                Giavt3: $('#giavt3_create').val().replace(/\,/g, '.'),
                Giavt4: $('#giavt4_create').val().replace(/\,/g, '.'),
                Giavt5: $('#giavt5_create').val().replace(/\,/g, '.'),
                HienThi: $('#hienthi_create').val(),
                SapXep: $('#sapxep_create').val(),
                MaDv: $('#Madv').val(),

            },
            dataType: 'JSON',

            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Cập nhật thông tin thành công!", "Thành công");

                    $('#frm_data').replaceWith(data.message);

                    $(document).ready(function () {
                        TableManaged4.init();
                    });
                    $('#Create_Modal').modal("hide");
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })

    }

    //Xóa 1 bản nghi phần chi tiết
    function GetDelete(id) {
        document.getElementById("id_delete").value = id;
    }


    function SetDelete() {
        $.ajax({
            url: '/GiaDatDiaBanCt/Delete',
            type: 'POST',
            data: {
                Id: $('#id_delete').val(),
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    $('#frm_data').replaceWith(data.message);
                    $(document).ready(function () {
                        TableManaged4.init();
                    });
                    toastr.success("Cập nhật thành công!!!", "Thành công!");
                    $('#Delete_Modal').modal("hide");
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }


    //Xóa tất cả bản phần chi tiết

    function SetDelete2() {
        $.ajax({
            url: '/GiaDatDiaBanCt/Delete2',
            type: 'POST',
            data: {
                Mahs: $('#Mahs').val(),
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    $('#frm_data').replaceWith(data.message);
                    $(document).ready(function () {
                        TableManaged4.init();
                    });
                    toastr.success("Cập nhật thành công!!!", "Thành công!");
                    $('#Delete_Modal2').modal("hide");
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }

    //Sửa

    function SetUpdate() {
        $.ajax({
            url: '/GiaDatDiaBanCt/Update',
            type: 'POST',
            data: {
                Id: $('#id_edit').val(),
                Maloaidat: $('#maloaidat_edit').val(),
                Mota: $('#mota_edit').val(),
                Diemdau: $('#diemdau_edit').val(),
                Diemcuoi: $('#diemcuoi_edit').val(),
                Loaiduong: $('#loaiduong_edit').val(),
                Hesok: $('#hesok_edit').val().replace(/\,/g, '.'),
                Giavt1: $('#giavt1_edit').val().replace(/\,/g, '.'),
                Giavt2: $('#giavt2_edit').val().replace(/\,/g, '.'),
                Giavt3: $('#giavt3_edit').val().replace(/\,/g, '.'),
                Giavt4: $('#giavt4_edit').val().replace(/\,/g, '.'),
                Giavt5: $('#giavt5_edit').val().replace(/\,/g, '.'),
                HienThi: $('#hienthi_edit').val(),
                SapXep: $('#sapxep_edit').val(),
            },
            dataType: 'JSON',

            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Cập nhật thông tin thành công!", "Thành công");

                    $('#frm_data').replaceWith(data.message);

                    $(document).ready(function () {
                        TableManaged4.init();
                    });

                    $('#Edit_Modal').modal("hide");
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })

    }

    function SetEdit(id_edit) {
        $.ajax({
            url: '/GiaDatDiaBanCt/Edit',
            type: 'POST',
            data: {
                Id: id_edit
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Success!");
                    $('#edit_thongtin').replaceWith(data.message);
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }
</script>

