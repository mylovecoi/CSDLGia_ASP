@{
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"]; // truyền sang từ ViewData 
    var dsloaidat = (IEnumerable<DmLoaiDat>)ViewData["Dsloaidat"];
    var dsxaphuong = (IEnumerable<DsXaPhuong>)ViewData["DsXaPhuong"];
    int record_id = 1;
}
@model CSDLGia_ASP.Models.Manages.DinhGia.GiaDatDiaBan
@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}
    @section custom_script{
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/jquery-mask.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>

    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged4.init();
        });
    </script>
}

    <div class="card card-custom">
        <div class="card-header ribbon ribbon-top ribbon-ver">
            <div class="card-title">
                <h3 class="card-label">
                    HỒ SƠ GIÁ ĐẤT THEO CÔNG BỐ (Show)
                </h3>
            </div>
        </div>
        <!--begin::Form-->
        @* Mã địa bàn
    Mã hồ sơ
    Mã đơn vị gửi hồ sơ lên*@
        <form asp-controller="GiaDatDiaBan" asp-action="Update" method="post" enctype="multipart/form-data" id="frm_datdiaban_store">
            <div class="card-body">
                <input asp-for="Madv">
                <input asp-for="Mahs">
                <div class="row">

                    <div class="col-xl-12">
                        <div class="form-group">
                            <label>Theo thông tư quyết định</label>
                            <input type="text" class="form-control" asp-for="Soqd" id="Noidung" />

                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label>Địa bàn</label>
                            <select class="form-control" id="Madiaban" name="Madiaban">
                            @foreach (var item in dsdiaban)
                            {
                                <!option value="@item.MaDiaBan" @(item.MaDiaBan==(string)ViewData["MaDiaBan"] ? "selected": "")>@item.TenDiaBan</!option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Ngày áp dụng</label>
                        <input type="date" class="form-control" asp-for="Thoidiem" id="Thoidiem" />
                    </div>
                </div>
            </div>

            <div class="card-body" id="frm_data">
                <table class="table table-striped table-bordered table-hover" id="datatable_4">
                    <thead>
                        <tr style="text-align:center">
                            <th>STT</th>
                            <th>Xã phường</th>
                            <th>Loại đất</th>
                            <th>Khu vực tên đường phố</th>
                            <th>Địa giới</th>
                            <th>VT1</th>
                            <th>VT2</th>
                            <th>VT3</th>
                            <th>VT4</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @if (Model.GiaDatDiaBanCt != null)
                            {

                                @foreach (var item in Model.GiaDatDiaBanCt)
                                {
                                    <tr style="text-align:center">

                                        <td>@(record_id++)</td>
                                        <td class="active">@item.Maxp</td>
                                        <td class="active">@item.Maloaidat</td>
                                        <td class="active">@item.Khuvuc</td>
                                        <td class="active">@item.Diemdau đến @item.Diemcuoi </td>
                                        <td class="active">@item.Giavt1</td>
                                        <td class="active">@item.Giavt2</td>
                                        <td class="active">@item.Giavt3</td>
                                        <td class="active">@item.Giavt4</td>

                                    </tr>
                                }

                            }
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
            <div class="card-footer" style="text-align:center">
                <a asp-controller="GiaDatDiaBan" asp-action="Index" asp-route-Madv="@ViewData["Madv"]" class="btn btn-danger">
                    <i class="la la-reply"></i>Quay lại
                </a>&ensp;
            </div>
        </div>
    </form>
</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }