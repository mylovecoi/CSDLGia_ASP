@{
    Layout = "_LayoutReports";
    int record_id = 1;
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];

}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaMuaTaiSan>
<br />
<br />
<p style="text-align: center; font-weight: bold; font-size: 30px;">KẾT QUẢ TÌM KIẾM</p>
<br />
<br />

<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr >
            <th style="text-align: center">STT</th>
            <td style="text-align: center">Đơn vị nhập</td>
            <td style="text-align: center">Thời điểm xác định</td>
            <th style="text-align: center">Thông tin quyết định</th>
            <th style="text-align: center">Tên nhà thầu</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td style="text-align: center">
                        @foreach (var dv in dsdonvi)
                        {
                            @if (item.Madv == dv.MaDv)
                            {
                                <span>@dv.TenDv</span>
                            }
                        }
                    </td>
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                    <td style="text-align: center">@item.Thongtinqd</td>
                    <td style="text-align: center">@item.Tennhathau</td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="card-footer" style="text-align:center">
    <a asp-controller="GiaTrungThauHhDv" asp-action="Search" class="btn btn-danger">
        <i class="la la-reply"></i>Quay lại
    </a>
</div>




