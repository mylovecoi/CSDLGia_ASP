@{
    Layout = "_LayoutReports";

    var DonVis = (IEnumerable<DsDonVi>)ViewData["DonVis"];
    var HoSoCts = (IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaTaiSanCongCt>)ViewData["HoSoCt"];
  
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaTaiSanCong>

<table width="96%" border="0" cellspacing="0" cellpadding="8" style="margin:0 auto 20px; text-align: center;">
    <tr>
        <td width="40%" style="vertical-align: top;">
            <hr style="width: 10%;vertical-align: top;  margin-top: 2px; font-weight: bold">
        </td>
        <td style="vertical-align: top;">
            <b>
                CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM<br>
                Độc lập - Tự do - Hạnh phúc
            </b>
            <hr style="width: 15%;vertical-align: top; margin-top: 2px; font-weight: bold">
        </td>
    </tr>
    <tr>
        <td style="vertical-align: top;">Số: .........</td>
        <td style="text-align: right; vertical-align: top"><i style="margin-right: 25%;">, ngày....tháng....năm....</i></td>
    </tr>
</table>
<p style="text-align: center; font-weight: bold; font-size: 16px;">BÁO CÁO CHI TIẾT GIÁ TÀI SẢN CÔNG</p>

<p style="text-align: center; font-size: 16px;">Thời điểm: Từ ngày @ViewData["ThoiDiemKX"]</p>

<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr>
            <th style="text-align:center">STT</th>
            <th style="text-align:center">Tên tài sản</th>
            <th style="text-align:center">Đặc điểm</th>
            <th style="text-align:center">Nguyên giá</th>
            <th style="text-align:center">Giá còn lại</th>
            <th style="text-align:center">Giá phê duyệt</th>
            <th style="text-align:center">Giá bán (Thanh lý)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donvi in DonVis)
        {
            <tr>
                <td></td>
                <td colspan="6" style="font-weight:bold; text-transform:uppercase">@donvi.TenDv</td>
            </tr>
            var hoso = Model.Where(t => t.Madv == donvi.MaDv);
            foreach (var hs in hoso)
            {
                <tr>
                    <td></td>
                    <td colspan="6" style="font-weight:bold; font-style:italic">Số QĐ: @hs.Soqd- Thời điểm: @Helpers.ConvertDateToStr(hs.Thoidiem)</td>
                </tr>
                var hosoct = HoSoCts.Where(t => t.Mahs == hs.Mahs);
                int record_id = 1;
                @foreach(var item in hosoct)
                {
                    <tr>
                        <td style="text-align:center">@(record_id++)</td>
                        <td style="text-align:left">@item.Tentaisan</td>
                        <td style="text-align:right">@item.Dacdiem</td>
                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Giathue)</td>
                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Giaconlai)</td>
                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Giapheduyet)</td>
                        <td style="text-align:right">@Helpers.ConvertDbToStr(item.Giaban)</td>
                    </tr>
                }
            }
        }      
    </tbody>

</table>

<table width="96%" border="0" cellspacing="0" cellpadding="0" style="margin: 20px auto;text-align: center; height:200px">
    <tr>
        <td width="40%" style="text-align: left; vertical-align: top;">
            <span style="font-weight: bold;font-style: italic">Nơi nhận:</span><br>
            - UBND tỉnh;<br />
            - Bộ tài chính;<br />
            - Lưu: VT, QLGCS.
        </td>
        <td style="vertical-align: top;">
        <td style="vertical-align: top;">
            <p><b>@ViewData["ChucDanhNguoiKy"]</b></p>
            <i>(Ký tên, đóng dấu)</i>
            <br />
            <br />
            <br />
            <br />
            <p><b>@ViewData["HoTenNguoiKy"]</b></p>
        </td>
    </tr>
</table>