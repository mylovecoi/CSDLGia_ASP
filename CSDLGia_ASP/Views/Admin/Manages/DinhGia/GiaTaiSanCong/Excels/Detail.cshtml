@{
    int record_id = 1;
    var mahs = ViewData["Mahs"];
    var ct = (IEnumerable<GiaTaiSanCongCt>)ViewData["modelct"];
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th>STT</th>
                    <th>Tên tài sản</th>
                    <th>Đặc điểm</th>
                    <th>Nguyên giá</th>
                    <th>Giá còn lại</th>
                    <th>Giá phê duyệt</th>
                    <th>Giá bán ( thanh lý )</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ct)
                {
                    <tr style="text-align:center">
                        <td style="text-align:center">@(record_id++)</td>
                        <td>@item.Tentaisan</td>
                        <td>@item.Dacdiem</td>
                        <td>@item.Giathue</td>
                        <td>@item.Giaconlai</td>
                        <td>@item.Giapheduyet</td>
                        <td>@item.Giaban</td> 
                    </tr>
                }


            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>
