@{
    Layout = "_LayoutReports";
    var record_id = 1;
}
@model CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaPrint
<table width="96%" border="0" cellspacing="0" cellpadding="8" style="margin:0 auto 20px; text-align: center;">
    <tr>
        <td width="40%" style="vertical-align: top;">
            <span style="text-transform: uppercase;font-weight: bold">@Model.Tendv</span>
            <hr style="width: 10%;vertical-align: top;  margin-top: 2px">
        </td>
        <td style="vertical-align: top;">
            <b>
                CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM<br>
                Độc lập - Tự do - Hạnh phúc
            </b>
            <hr style="width: 15%;vertical-align: top; margin-top: 2px">
        </td>
    </tr>
    <tr>
        <td style="vertical-align: top;">Số quyết định: @Model.Soqd</td>
        <td style="text-align: right; vertical-align: top"><i style="margin-right: 25%;">@Model.Tendb, ngày @Model.Thoidiem.Day tháng @Model.Thoidiem.Month năm @Model.Thoidiem.Year</i></td>
    </tr>
</table>
<p style="text-align: center; font-weight: bold; font-size: 16px;">HỒ SƠ GIÁ SẢN PHẨM DỊCH VỤ CỤ THỂ</p>
<br>
<p style="text-align:center">Số quyết định: @Model.Soqd, ngày @Model.Thoidiem.Day tháng @Model.Thoidiem.Month năm @Model.Thoidiem.Year</p>
<br>
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr>
            <th style="text-align:center" width="2%">STT</th>
            <th style="text-align:center" width="58%">Phân loại</th>
            <th style="text-align:center" width="20%">Mức giá từ</th>
            <th style="text-align:center" width="20%">Mức giá đến</th>
        </tr>

    </thead>
    <tbody>
        @if (Model.GiaSpDvCuTheCt.Count() > 0)
        {
            @foreach (var item in Model.GiaSpDvCuTheCt)
         
           
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td style="text-align: center">@item.Phanloaidv</td>
                    <td style="text-align: center">@item.Mucgiatu</td>
                    <td style="text-align: center">@item.Mucgiaden</td>
                </tr>
            }
        }
    </tbody>
</table>
<p>Ghi chú:@Model.Ghichu</p>
<table width="96%" border="0" cellspacing="0" cellpadding="0" style="margin: 20px auto;text-align: center; height:200px">
    <tr>
        <td width="40%" style="text-align: left; vertical-align: top;">
            <span style="font-weight: bold;font-style: italic">Nơi nhận:</span><br>
            - UBND tỉnh;<br>
            - Bộ tài chính;<br>
            - Lưu: VT, QLGCS.

        </td>
        <td style="vertical-align: top;">
            <i>(Ký tên, đóng dấu)</i>
        </td>
    </tr>
</table>