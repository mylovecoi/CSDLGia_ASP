        <td style="vertical-align: top;">Số: .........</td>
        <td style="text-align: right; vertical-align: top"><i style="margin-right: 25%;">, ngày....tháng....năm....</i></td>
    </tr>
</table>
<p style="text-align: center; font-weight: bold; font-size: 16px;">BÁO CÁO CHI TIẾT GIÁ TRÚNG THẦU QUYỀN SỬ DỤNG ĐẤT</p>

<p style="text-align: center; font-size: 16px;">Thời điểm: @ViewData["ThoiDiemKX"]</p>

@foreach (var dv in DonVis)
{
    <p style="text-align: center; font-size: 16px; font-style:italic">
        @dv.TenDv
    </p>
    var hosodonvi = Model.Where(t => t.Madv == dv.MaDv);
    @foreach (var hoso in hosodonvi)
    {
        <p style="text-align: center; font-size: 16px; font-style:italic">
          @*   Số QĐ: @hoso.Soqd - Thời điểm: @Helpers.ConvertDateToStr(hoso.Thoidiem) *@
        </p>
        <p style="text-align: center; font-size: 16px; font-style:italic">
          @*   @hoso.Mota *@
        </p>
        var hosoct = HoSoCts.Where(t => t.Mahs == hoso.Mahs);
        <table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
            <thead>
                <tr>
                    <th style="text-align:center; font-weight:bold" width="5%">STT</th>
                    <th style="text-align:center; font-weight:bold">Số lô</th>
                    <th style="text-align:center; font-weight:bold">Số thửa</th>
                    <th style="text-align:center; font-weight:bold">Tờ bản đồ</th>
                    <th style="text-align:center; font-weight:bold">Mô tả</th>
                    <th style="text-align:center; font-weight:bold">Diện tích</th>
                    <th style="text-align:center; font-weight:bold">Đơn vị tính</th>
                    <th style="text-align:center; font-weight:bold">Giá khởi điểm</th>
                    <th style="text-align:center; font-weight:bold">Giá đấu giá</th>
                </tr>
            </thead>
          @*   <tbody>
                @foreach (var item in hosoct.OrderBy(t => t.STTSapxep))
                {
                    string HtmlStyle = Helpers.ConvertStrToStyle(item.Style);
                    <tr>
                        <td style="text-align:center; @HtmlStyle">@item.STTHienthi</td>
                        <td style="text-align:left; @HtmlStyle">@item.Ptcp</td>
                        <td style="text-align:center; @HtmlStyle">@item.Phantram</td>
                        <td style="text-align:right; @HtmlStyle">@Helpers.ConvertDbToStr(item.Mucthutu)</td>

                    </tr>
                }
            </tbody> *@
        </table>
    }
}


<table width="100%" cellspacing="0" cellpadding="0" border="0" style="margin: 0px auto; border-collapse: collapse;font-size:14px">
    <tr>
        <td width="45%" style="text-align: left">
        </td>
        <td width="55%" style="text-align: center">
            <span style="font-weight: bold; text-transform:uppercase">
                @ViewData["ChucDanhNguoiKy"]
            </span><br />
            <span style="font-style: italic">(Ký tên, đóng dấu)</span><br />
        </td>
    </tr>
    <tr style="text-align: center; height:100px">
        <td style="font-weight: bold; padding-top: 90px"></td>
        <td style="font-weight: bold; padding-top: 90px; text-align:center">@ViewData["HoTenNguoiKy"]</td>
