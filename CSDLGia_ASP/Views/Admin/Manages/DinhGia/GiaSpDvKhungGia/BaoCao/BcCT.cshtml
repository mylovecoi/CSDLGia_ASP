@{
    Layout = "_LayoutReports";
    var record_id = 1;
  
    var cts = (IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaSpDvKhungGiaCt>)ViewData["ct"];
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaSpDvKhungGia>
<br />
<br />

<p style="text-align: center; font-weight: bold; font-size: 16px;">BÁO CÁO CHI TIẾT</p>

<p style="text-align: center; font-size: 16px;">Thời điểm: Từ ngày @Helpers.ConvertDateToStr((DateTime)ViewData["tungay"]) đến ngày @Helpers.ConvertDateToStr((DateTime)ViewData["denngay"])</p>

<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr>
            <th width="2%" style="text-align: center">STT</th>
            <th style="text-align:center">Nhóm sản phẩm dịch vụ khung giá</th>
            <th style="text-align:center">Đối tượng cụ thể</th>
            <th style="text-align: center">Đơn vị tính</th>
            <th style="text-align: center">Mức giá tối thiểu</th>
            <th style="text-align: center">Mức giá tối đa</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center">@(record_id++)</td>

                 <td colspan="7">

                    Mã hồ sơ:@item.Mahs

                </td>

            </tr>
            var record_id_ct = 1;
            foreach (var ct in cts.Where(t => t.Mahs == item.Mahs))
            {
                <tr>
                    <td style="text-align: center">@(record_id - 1).@(record_id_ct++)</td>
                    <td style="text-align: center">@ct.Manhom</td>
                    <td style="text-align: center">@ct.Phanloaidv</td>
                    <td style="text-align: center">@ct.Dvt</td>
                    <td style="text-align: center">@ct.Giatoithieu</td>
                    <td style="text-align: center">@ct.Giatoida</td>


                </tr>
            }
        }
    </tbody>
</table>
<table width="96%" border="0" cellspacing="0" cellpadding="0" style="margin: 20px auto;text-align: center; height:200px">
    <tr>
        <td width="40%" style="text-align: left; vertical-align: top;">
            <span style="font-weight: bold;font-style: italic">Nơi nhận:</span><br>
            - UBND tỉnh;<br />
            - Bộ tài chính;<br />
            - Lưu: VT, QLGCS.
        </td>
        <td style="vertical-align: top;">
        <td style="vertical-align: top;">

            <p><b>@ViewData["chucvu"]</b></p>
            <i>(Ký tên, đóng dấu)</i>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <p><b>@ViewData["tenthutruong"]</b></p>
        </td>
    </tr>
</table>