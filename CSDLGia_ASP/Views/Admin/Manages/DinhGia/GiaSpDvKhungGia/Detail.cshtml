@model CSDLGia_ASP.Models.Manages.DinhGia.GiaSpDvKhungGia
@{
    var mahs = ViewData["Mahs"];
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>
        
    </div>
    <hr />
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th>STT</th>
                    <th>Tên đối tượng</th>
                    <th>Đơn vị tính</th>
                    <th>Mức giá tối thiểu</th>
                    <th>Mức giá tối đa</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @if (Model.GiaSpDvKhungGiaCt != null)
                    {
                        @foreach (var item in Model.GiaSpDvKhungGiaCt.OrderBy(x=>x.SapXep))
                        {
                            <tr style="text-align:center">
                                <td>@item.SapXep</td>
                                <td class="active">@item.Tenspdv</td>
                                <td>@item.Dvt</td>
                                <td>@Helpers.ConvertDbToStr(item.Giatoithieu)</td>
                                <td>@Helpers.ConvertDbToStr(item.Giatoida)</td>
                                <td>
                                    <button type="button" data-target="#Edit_Modal" data-toggle="modal"
                                onclick="SetEdit(@item.Id)" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                        <i class="icon-lg la la-edit text-primary"></i>
                                    </button> 
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>
@await Html.PartialAsync("~/Views/Admin/Manages/DinhGia/GiaSpDvKhungGia/Modal.cshtml")