@{
    int record_id = 1;
    var GiaThueTaiSanCongDm = (IEnumerable<GiaThueTaiSanCongDm>)ViewData["GiaThueTaiSanCongDm"];
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["dsdonvi"];

}
@model IEnumerable<CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaThueTsc>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

    @section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>

}
    <script>
        $(document).ready(function() {
            TableManaged.init();
        });
    </script>

    <div class="card card-custom">
        <div class="card-header flex-wrap border-0 pt-6 pb-0">
            <div class="card-title">
                <h3 class="card-label">
                   Kết quả tìm kiếm thông tin Giá thuê tài sản công
                </h3>
            </div>
        </div>
        <hr />
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover" id="sample_3">
                <thead>
                    <tr style="text-align:center">
                        <th>STT</th>
                        <td>Đơn vị nhập</td>
                        <td>Thời điểm</td>
                        <th>Tên tài sản</th>
                        <th>Thông tin hồ sơ</th>
                        <td>đơn giá</td>
                        <td>Số tiền thuê</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            @foreach (var dv in dsdonvi)
                            {
                                @if (dv.MaDv == item.Madv)
                                {
                                    <td style="text-align: center">@dv.TenDv</td>
                                }
                            }
                            <td style="text-align: left">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                            <td style="text-align: center">
                                @if (GiaThueTaiSanCongDm != null)
                                {
                                    @foreach (var dm in GiaThueTaiSanCongDm)
                                    {
                                        @if (item.Mataisan == dm.Mataisan)
                                        {
                                            <span>@dm.Tentaisan</span>
                                        }
                                    }
                                }

                            </td>
                            <td style="text-align: center"> @item.Thongtinhs</td>
                            <td style="text-align: center">@item.Dongiathue</td>
                             <td style="text-align: center">@item.Sotienthuenam</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="GiaThueTSanCong" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>
    </div>
</div>





