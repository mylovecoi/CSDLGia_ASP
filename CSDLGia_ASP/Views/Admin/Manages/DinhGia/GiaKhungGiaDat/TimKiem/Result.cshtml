@{
    int record_id = 1;
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaKhungGiaDatCt>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });
    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Kết quả tìm kiếm hồ sơ
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th rowspan="2" width="4%">#</th>
                    <th rowspan="2">Đơn vị nhập</th>
                    <th rowspan="2">Thời điểm</th>
                    <th rowspan="2">Vùng kinh tế</th>
                    <th colspan="2">Xã đồng bằng</th>
                    <th colspan="2">Xã trung du</th>
                    <th colspan="2">Xã miền núi</th>
                </tr>
                <tr>
                    <th>Giá tối thiểu</th>
                    <th>Giá tối đa</th>
                    <th>Giá tối thiểu</th>
                    <th>Giá tối đa</th>
                    <th>Giá tối thiểu</th>
                    <th>Giá tối đa</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            <td>@item.Tendv</td>
                            <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                            <td style="text-align: left; font-weight: bold" class="active">@item.Vungkt</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Giattdb)</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Giatddb)</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Giatttd)</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Giatdtd)</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Giattmn)</td>
                            <td style="text-align: right; font-weight:bold;">@Helpers.ConvertDbToStr(item.Giatdmn)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="GiaKhungGiaDat" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>&ensp;
    </div>
</div>

