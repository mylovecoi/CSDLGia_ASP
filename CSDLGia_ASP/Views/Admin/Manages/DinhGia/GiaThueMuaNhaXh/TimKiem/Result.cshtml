@{
    Layout = "_LayoutReports";
    int record_id = 1;
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaThueMuaNhaXhCt>
<br />
<br />
<p style="text-align: center; font-weight: bold; font-size: 30px;">KẾT QUẢ TÌM KIẾM </p>
<br />
<br />

<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">
    <thead>
        <tr >
            <th style="text-align: center">STT</th>
            <th style="text-align: center">Đơn vị nhập</th>
            <th style="text-align: center">Thời điểm</th>
            <th style="text-align: center">Tên nhà xã hội</th>
            <th style="text-align: center">Đơn vị tính</th>
            <th style="text-align: center">Giá bán</th>
            <th style="text-align: center">Giá thuê</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    <td style="text-align: center">@item.Madv</td>
                    <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                    <td style="text-align: center">@item.Tennha</td>
                    <td style="text-align: center">@item.Dvt</td>
                    <td style="text-align: center">@Helpers.ConvertDbToStr(item.Dongia)</td>
                    <td style="text-align: center">@Helpers.ConvertDbToStr(item.Dongiathue)</td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="card card-custom">
    <div class="card-footer" style="text-align:center">
        <a asp-controller="GiaThueMuaNhaXh" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>
    </div>
</div>





