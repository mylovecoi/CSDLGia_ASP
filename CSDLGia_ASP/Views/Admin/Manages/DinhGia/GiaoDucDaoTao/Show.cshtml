    <div class="card card-custom">
        <div class="card-header ribbon ribbon-top ribbon-ver">
            <div class="card-title">
                <h3 class="card-label">
                    Thông tin hồ sơ giá<small>&nbsp;dịch vụ giáo dục đào tạo</small>
                </h3>
            </div>
        </div>
        <div class="card-body">

            <div class="mb-3 font-weight-bold font-size-lg">
                <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ</label>
            </div>
            <div class="row">
                <div class="col-xl-4">
                    <div class="form-group">
                        <label>Địa bàn</label>
                        <select class="form-control" id="MaDiaBan" name="MaDiaBan" disabled>
                            @foreach (var item in dsdiaban)
                        {
                            <!option value="@item.MaDiaBan" @(@Model.Madiaban == item.MaDiaBan ? "selected" : "" ) >@item.TenDiaBan</!option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-4">
                <div class="form-group">
                    <label>Số quyết định</label>
                    <input type="text" class="form-control" asp-for="Soqd" id="Soqd" disabled />
                </div>
            </div>
            <div class="col-xl-4">
                <div class="form-group">
                    <label>Thời điểm*</label>
                    <input type="date" class="form-control" asp-for="Thoidiem" id="Thoidiem" disabled />
                </div>
            </div>
            <div class="col-xl-4">
                <div class="form-group">
                    <label>từ năm*</label>
                    <input type="text" class="form-control" asp-for="Tunam" id="Tunam" disabled />
                </div>
            </div>
            <div class="col-xl-4">
                <div class="form-group">
                    <label> đến năm*</label>
                    <input type="text" class="form-control" asp-for="Dennam" id="Dennam" disabled />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Nội dung hồ sơ</label>
                    <input type="text" class="form-control" asp-for="Mota" disabled />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label class="control-label">File đính kèm</label>
                    <input asp-for="Ipf1" type="file" accept=".jpg,.jpeg,.png" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label class="control-label">File đính kèm</label>
                    <input asp-for="Ipf2" type="file" accept=".jpg,.jpeg,.png" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label class="control-label">File đính kèm</label>
                    <input asp-for="Ipf3" type="file" accept=".jpg,.jpeg,.png" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label class="control-label">File đính kèm</label>
                    <input asp-for="Ipf4" type="file" accept=".jpg,.jpeg,.png" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label class="control-label">File đính kèm</label>
                    <input asp-for="Ipf5" type="file" accept=".jpg,.jpeg,.png" />
                </div>
            </div>
        </div>

    </div>

<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th rowspan="2">STT</th>
                    <th rowspan="2">Tên sản phẩm <br />dịch vụ</th>
                    <td colspan="4">Mức thu học phí 1</td>
                    <td colspan="4">Mức thu học phí 2</td>
                    <td colspan="4">Mức thu học phí 3</td>
                </tr>
                <tr>
                    <th>Năm <br /> học</th>
                    <th>Thành<br /> thị</th>
                    <th>Nông<br /> thôn</th>
                    <th>Miền<br /> núi</th>

                    <th>Năm<br /> học</th>
                    <th>Thành<br /> thị</th>
                    <th>Nông<br /> thôn</th>
                    <th>Miền<br /> núi</th>

                    <th>Năm<br /> học</th>
                    <th>Thành<br /> thị</th>
                    <th>Nông<br /> thôn</th>
                    <th>Miền<br /> núi</th>
                </tr>
            </thead>
            <tbody>

                    @if (GiaDvGdDtCt != null)
                    {
                        @foreach (var item in GiaDvGdDtCt)
                        {
                            <tr>
                                <td style="text-align:center">@(record_id++)</td>
                                <td style="text-align:center">
                                    @if (GiaDvGdDtDm != null)
                                    {
                                        @foreach (var dm in GiaDvGdDtDm)
                                        {
                                            @if (item.Maspdv == dm.Maspdv)
                                            {
                                                <span>@dm.Tenspdv</span>
                                            }
                                        }
                                    }
                                </td>

                                <td>@item.Namapdung1</td>
                                <td>@item.Giathanhthi1</td>
                                <td>@item.Gianongthon1</td>
                                <td>@item.Giamiennui1</td>

                                <td>@item.Namapdung2</td>
                                <td>@item.Giathanhthi2</td>
                                <td>@item.Gianongthon2</td>
                                <td>@item.Giamiennui2</td>

                                <td>@item.Namapdung3</td>
                                <td>@item.Giathanhthi3</td>
                                <td>@item.Gianongthon3</td>
                                <td>@item.Giamiennui3</td>
                            </tr>
                        }
                    }
                
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>

</div>
