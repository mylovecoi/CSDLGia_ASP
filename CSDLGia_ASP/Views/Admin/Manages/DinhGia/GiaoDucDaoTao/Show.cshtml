@{
    Layout = "_LayoutReports";
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"];
    var GiaDvGdDtDm = (IEnumerable<GiaDvGdDtDm>)ViewData["GiaDvGdDtDm"];
    var GiaDvGdDtCt = (IEnumerable<GiaDvGdDtCt>)ViewData["GiaDvGdDtCt"];
    int record_id = 1;
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
}

<br />
<br />
@model CSDLGia_ASP.Models.Manages.DinhGia.GiaDvGdDt

<p style="text-align: center; font-weight: bold; font-size: 30px;">THÔNG TIN HỒ SƠ </p>
<p style="text-align: left; font-size: 16px;">Số quyết định:@Model.Soqd</p>
<p style="text-align: left; font-size: 16px;">
    Địa bàn:
    @foreach (var ds in dsdiaban)
    {
        @if (Model.Madiaban == ds.MaDiaBan)
        {
            @ds.TenDiaBan
        }
    }
</p>
<p style="text-align: left; font-size: 16px;">Thời điểm: @Model.Thoidiem</p>
<p style="text-align: left; font-size: 16px;">Mô tả: @Model.Mota</p>
<p style="text-align: left; font-size: 16px;">
    Cơ quan tiếp nhận:
    @foreach (var dsonvi in dsdonvi)
    {
        @if (Model.Macqcq == dsonvi.MaDv)
        {
            @dsonvi.TenDv
        }
    }
</p>

<br />
<p style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</p>
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data">

    <thead>
        <tr>
            <th style="text-align: center;" rowspan="2">STT</th>
            <th style="text-align: center;" rowspan="2">Tên sản phẩm dịch vụ</th>
            <th style="text-align: center;" colspan="4">Mức thu học phí 1</th>
            <th style="text-align: center;" colspan="4">Mức thu học phí 2</th>
            <th style="text-align: center;" colspan="4">Mức thu học phí 3</th>
        </tr>
        <tr>
            <th style="text-align: center;">Năm học</th>
            <th style="text-align: center;">Thành thị</th>
            <th style="text-align: center;">Nông thôn</th>
            <th style="text-align: center;">Miền núi</th>

            <th style="text-align: center;">Năm học</th>
            <th style="text-align: center;">Thành thị</th>
            <th style="text-align: center;">Nông thôn</th>
            <th style="text-align: center;">Miền núi</th>

            <th style="text-align: center;">Năm học</th>
            <th style="text-align: center;">Thành thị</th>
            <th style="text-align: center;">Nông thôn</th>
            <th style="text-align: center;">Miền núi</th>
        </tr>
    </thead>
    <tbody>

        @if (GiaDvGdDtCt != null)
        {
            @foreach (var item in GiaDvGdDtCt)
            {
                <tr>
                    <td style="text-align:center">@(record_id++)</td>
                    <td style="text-align:center">
                        @if (GiaDvGdDtDm != null)
                        {
                            @foreach (var dm in GiaDvGdDtDm)
                            {
                                @if (item.Maspdv == dm.Maspdv)
                                {
                                    <span>@dm.Tenspdv</span>
                                }
                            }
                        }
                    </td>

                    <td style="text-align:center">@item.Namapdung1</td>
                    <td style="text-align:center">@item.Giathanhthi1</td>
                    <td style="text-align:center">@item.Gianongthon1</td>
                    <td style="text-align:center">@item.Giamiennui1</td>

                    <td style="text-align:center">@item.Namapdung2</td>
                    <td style="text-align:center">@item.Giathanhthi2</td>
                    <td style="text-align:center">@item.Gianongthon2</td>
                    <td style="text-align:center">@item.Giamiennui2</td>

                    <td style="text-align:center">@item.Namapdung3</td>
                    <td style="text-align:center">@item.Giathanhthi3</td>
                    <td style="text-align:center">@item.Gianongthon3</td>
                    <td style="text-align:center">@item.Giamiennui3</td>
                </tr>
            }
        }

    </tbody>

</table>