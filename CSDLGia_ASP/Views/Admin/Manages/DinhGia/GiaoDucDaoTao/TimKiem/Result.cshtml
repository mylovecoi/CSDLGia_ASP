@{
    int record_id = 1;
    var tendv = (IEnumerable<GiaDvGdDtDm>)ViewData["Tendv"];
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["dsdonvi"];

}
@model IEnumerable<CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaDvGdDt>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

    @section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>

}
    <script>
        $(document).ready(function() {
            TableManaged.init();
        });
    </script>

    <div class="card card-custom">
        <div class="card-header flex-wrap border-0 pt-6 pb-0">
            <div class="card-title">
                <h3 class="card-label">
                    Tìm kiếm thông tin định giá dịch vu giáo dục đào tạo
                </h3>
            </div>
        </div>
        <hr />
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover" id="sample_3">
                <thead>
                    <tr style="text-align:center">
                        <th rowspan="2">STT</th>
                        <td rowspan="2">Đơn vị nhập</td>
                        <td rowspan="2">Thời điểm</td>
                        <th rowspan="2">Tên sản phẩm <br />dịch vụ</th>
                        <td colspan="4">Mức thu học phí 1</td>
                        <td colspan="4">Mức thu học phí 2</td>
                        <td colspan="4">Mức thu học phí 3</td>                   
                    </tr>
                    <tr>
                        <th>Năm <br /> học</th>
                        <th>Thành<br /> thị</th>
                        <th>Nông<br /> thôn</th>
                        <th>Miền<br /> núi</th>

                        <th>Năm<br /> học</th>
                        <th>Thành<br /> thị</th>
                        <th>Nông<br /> thôn</th>
                        <th>Miền<br /> núi</th>

                        <th>Năm<br /> học</th>
                        <th>Thành<br /> thị</th>
                        <th>Nông<br /> thôn</th>
                        <th>Miền<br /> núi</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            @foreach (var dv in dsdonvi)
                            {
                                @if (dv.MaDv == item.Madv)
                                {
                                    <td style="text-align: center">@dv.TenDv</td>
                                }
                            }
                            <td style="text-align: left">@Helpers.ConvertDateToStr(item.Thoidiem)</td>

                            @foreach (var tn in tendv)
                            {
                                if (item.Maspdv == tn.Maspdv)
                                {
                                    <td style="text-align: left">@tn.Tenspdv</td>
                                }
                            }
                           <td>@item.Namapdung1</td>
                            <td>@item.Giathanhthi1</td>
                            <td>@item.Gianongthon1</td>
                            <td>@item.Giamiennui1</td>

                            <td>@item.Namapdung2</td>
                            <td>@item.Giathanhthi2</td>
                            <td>@item.Gianongthon2</td>
                            <td>@item.Giamiennui2</td>

                            <td>@item.Namapdung3</td>
                            <td>@item.Giathanhthi3</td>
                            <td>@item.Gianongthon3</td>
                            <td>@item.Giamiennui3</td>

@*
                            @foreach (var ct in item.GiaDvGdDtCt)
                            {
                                <td>@ct.Namapdung1</td>
                                <td>@ct.Giathanhthi1</td>
                                <td>@ct.Gianongthon1</td>
                                <td>@ct.Giamiennui1</td>

                                <td>@ct.Namapdung2</td>
                                <td>@ct.Giathanhthi2</td>
                                <td>@ct.Gianongthon2</td>
                                <td>@ct.Giamiennui2</td>

                                <td>@ct.Namapdung3</td>
                                <td>@ct.Giathanhthi3</td>
                                <td>@ct.Gianongthon3</td>
                                <td>@ct.Giamiennui3</td>
                            }*@
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="GiaoDucDaoTao" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>
    </div>
</div>





