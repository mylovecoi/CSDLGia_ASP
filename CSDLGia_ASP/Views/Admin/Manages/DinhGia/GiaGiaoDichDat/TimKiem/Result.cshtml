@{
    int record_id = 1;
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaGiaoDichDatCt>

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });
    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Kết quả tìm kiếm hồ sơ*
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">
            <div class="col-xl-9">
            </div>
            <div class="col-xl-3 ">
                <div class="card-toolbar text-right">
                    <a class="btn btn-primary font-weight-bolder" asp-controller="#" asp-action="#">
                        <i class="la la-print"></i>In trang
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr>
                    <th style="text-align: center">STT</th>
                    <th style="text-align: center">Đơn vị nhập</th>
                    <th style="text-align: center">Thời điểm</th>
                    <th style="text-align: center">Nhóm đất</th>
                    <th style="text-align: center">Tên loại đất</th>
                    <th style="text-align: center">Đơn vị tính</th>
                    <th style="text-align: center">Giá kỳ này</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            <td style="text-align: center">@item.Tendv</td>
                            <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                            <td style="text-align: center">@item.Tennhom</td>
                            <th style="text-align: center">@item.Dvt</th>
                            <td style="text-align: center" font-weight:bold;">@Helpers.ConvertDbToStr(item.Gia)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="GiaGiaoDichDat" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>&ensp;
    </div>
</div>



