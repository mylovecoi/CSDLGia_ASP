@{
    int record_id = 1;
    var doituong = (IEnumerable<GiaNuocShDmVung>)ViewData["Doituong"];
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaNuocShCt>

@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });
    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Kết quả tìm kiếm hồ sơ
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">
            <div class="col-xl-9">
            </div>
            <div class="col-xl-3 ">
                <div class="card-toolbar text-right">
                    <a class="btn btn-primary font-weight-bolder" asp-controller="#" asp-action="#">
                        <i class="la la-print"></i>In trang
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr>
                    <th style="text-align: center;" colspan="1">STT</th>
                    <th style="text-align: center;" colspan="1">Đơn vị nhập</th>
                    <th style="text-align: center;" colspan="1">Thời điểm</th>
                    <th style="text-align:center">Mục đích sử dụng</th>
                    <th style="text-align:center">Tỷ trọng tiêu thụ (%)</th>
                    <th style="text-align:center">Sản lượng (m3)</th>
                    <th style="text-align:center">Đơn giá chưa bao gồm thuế GTGT <br />(đồng/m3)</th>
                    <th style="text-align:center">Đơn giá đã bao gồm thuế GTGT <br />(đồng/m3)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            <td>@item.Namchuathue</td>
                            <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                            <td style="text-align: center">@item.Doituongsd</td>
                            <td style="text-align: center">@item.TyTrongTieuThu</td>
                            <td style="text-align: center">@item.SanLuong</td>
                            <td style="text-align: center">@(@item.DonGia1 != 0 ? Helpers.ConvertDbToStr(item.DonGia1) : "")</td>
                            <td style="text-align: center">@(@item.DonGia1 != 0 ? Helpers.ConvertDbToStr(item.DonGia1) : "")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="GiaNuocSh" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>
    </div>
</div>







