@{
    int record_id = 1;
    var doituong = (IEnumerable<GiaNuocShDmVung>)ViewData["Doituong"];
    var dscqcq = (IEnumerable<DsDonVi>)ViewData["Cqcq"];
}
@model IEnumerable<CSDLGia_ASP.ViewModels.Manages.DinhGia.VMDinhGiaNuocShSearch>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>

}
<script>
    $(document).ready(function () {
        TableManaged.init();
    });
</script>

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Tìm kiếm thông tin định giá nước sinh hoạt
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th rowspan="2" colspan="1">STT</th>
                    <th rowspan="2" colspan="1">Đơn vị nhập</th>
                    <th rowspan="2" colspan="1">Thời điểm</th>
                    <th rowspan="2" colspan="1">Đối tượng sử dụng</th>
                    <th rowspan="1" colspan="2">Đơn giá</th>
                    <th rowspan="1" colspan="2">Đơn giá</th>
                    <th rowspan="1" colspan="2">Đơn giá</th>
                    <th rowspan="1" colspan="2">Đơn giá</th>
                    <th rowspan="1" colspan="2">Đơn giá</th>
                </tr>
                <tr style="text-align:center">
                    <th rowspan="1" colspan="1">Năm áp dụng</th>
                    <th rowspan="1" colspan="1">Giá tiền</th>
                    <th rowspan="1" colspan="1">Năm áp dụng</th>
                    <th rowspan="1" colspan="1">Giá tiền</th>
                    <th rowspan="1" colspan="1">Năm áp dụng</th>
                    <th rowspan="1" colspan="1">Giá tiền</th>
                    <th rowspan="1" colspan="1">Năm áp dụng</th>
                    <th rowspan="1" colspan="1">Giá tiền</th>
                    <th rowspan="1" colspan="1">Năm áp dụng</th>
                    <th rowspan="1" colspan="1">Giá tiền</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td style="text-align: center">@(record_id++)</td>
                    @foreach (var ds in dscqcq)
                    {
                        @if (item.Macqcq == ds.MaDv)
                        {
                            <td style="text-align: center">@ds.TenDv</td>
                        }
                    }
                    <td style="text-align: left">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                    <td>@item.Doituongsd</td>
                    <td>@item.Namchuathue</td>
                    <td>@item.Giachuathue</td>
                    <td>@item.Namchuathue1</td>
                    <td>@item.Giachuathue1</td>
                    <td>@item.Namchuathue2</td>
                    <td>@item.Giachuathue2</td>
                    <td>@item.Namchuathue3</td>
                    <td>@item.Giachuathue3</td>
                    <td>@item.Namchuathue4</td>
                    <td>@item.Giachuathue4</td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center">
        <a asp-controller="Gianuocsh" asp-action="Search" class="btn btn-danger">
            <i class="la la-reply"></i>Quay lại
        </a>
    </div>
</div>





