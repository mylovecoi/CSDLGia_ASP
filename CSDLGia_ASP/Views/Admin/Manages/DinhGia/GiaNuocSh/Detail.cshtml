@model CSDLGia_ASP.Models.Manages.DinhGia.GiaNuocSh
@{
    int record_id = 1;
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th rowspan="2">STT</th>
                    <th rowspan="2">Mục đích sử dụng</th>
                    <th colspan="2">Đơn giá</th>
                    <th colspan="2">Đơn giá</th>
                    <th colspan="2">Đơn giá</th>
                    <th colspan="2">Đơn giá</th>
                    <th colspan="2">Đơn giá</th>
                    <th rowspan="2">Thao tác</th>
                </tr>
                <tr style="text-align:center">
                    <th>Năm áp dụng</th>
                    <th>Giá tiền</th>
                    <th>Năm áp dụng</th>
                    <th>Giá tiền</th>
                    <th>Năm áp dụng</th>
                    <th>Giá tiền</th>
                    <th>Năm áp dụng</th>
                    <th>Giá tiền</th>
                    <th>Năm áp dụng</th>
                    <th>Giá tiền</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.GiaNuocShCt != null)
                {
                    @foreach (var item in Model.GiaNuocShCt)
                    {
                        <tr>
                            <td style="text-align:center">@(record_id++)</td>
                            <td style="text-align:center">@item.Doituongsd</td>
                            <td style="text-align:center">@item.Namchuathue</td>
                            <td style="text-align:center" ;font-weight:bold">@(@item.Giachuathue != 0 ? Helpers.ConvertDbToStr(item.Giachuathue) : "")</td>
                            <td style="text-align:center">@item.Namchuathue1</td>
                            <td style="text-align:center" ;font-weight:bold">@(@item.Giachuathue1 != 0 ? Helpers.ConvertDbToStr(item.Giachuathue1) : "")</td>
                            <td style="text-align:center">@item.Namchuathue2</td>
                            <td style="text-align:center" ;font-weight:bold">@(@item.Giachuathue2 != 0 ? Helpers.ConvertDbToStr(item.Giachuathue2) : "")</td>
                            <td style="text-align:center">@item.Namchuathue3</td>
                            <td style="text-align:center" ;font-weight:bold">@(@item.Giachuathue3 != 0 ? Helpers.ConvertDbToStr(item.Giachuathue3) : "")</td>
                            <td style="text-align:center">@item.Namchuathue4</td>
                            <td style="text-align:center" ;font-weight:bold">@(@item.Giachuathue4 != 0 ? Helpers.ConvertDbToStr(item.Giachuathue4) : "")</td>
                            <td>
                                <button type="button" data-target="#Edit_Modal" data-toggle="modal"
                                        onclick="SetEdit('@item.Id')" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                    <i class="icon-lg la la-edit text-primary"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>

<!--Edit Modal-->
<div class="modal fade" id="Edit_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-label text-dark">
                    Chỉnh sửa thông tin
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body" id="edit_thongtin">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                <button type="button" class="btn btn-primary font-weight-bold" onclick="SetUpdate()">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<script>
    function SetEdit(id_edit) {
        var begin = $("#Tunam").val();
       
        var datebegin = parseInt(begin);
        var end = $("#Dennam").val();
        var dateend = parseInt(end);
   
        $.ajax({
            url: '/GiaNuocShCtNew/Edit',
            type: 'POST',
            data: {
                Id: id_edit,
                Nam: datebegin,
                Nam1: datebegin + 1 <= dateend ? datebegin + 1 : "",
                Nam2: datebegin + 2 <= dateend ? datebegin + 2 : "",
                Nam3: datebegin + 3 <= dateend ? datebegin + 3 : "",
                Nam4: datebegin + 4 <= dateend ? datebegin + 4 : "", 
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') 
                {
                    toastr.success("Thành công!");
                    $('#edit_thongtin').replaceWith(data.message);
                    MoneyMask();
                } else 
                {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })


    }

    function SetUpdate() {
        var gia = $('#gia_edit').val().replace(',', '');
        var gia1 = $('#gia1_edit').val().replace(',', '');
        var gia2 = $('#gia2_edit').val().replace(',', '');
        var gia3 = $('#gia3_edit').val().replace(',', '');
        var gia4 = $('#gia4_edit').val().replace(',', '');
        $.ajax({
            url: '/GiaNuocShCtNew/Update',
            type: 'POST',
            data: {
                Namchuathue: $('#nam_edit').val(),
                Namchuathue1: $('#nam1_edit').val(),
                Namchuathue2: $('#nam2_edit').val(),
                Namchuathue3: $('#nam3_edit').val(),
                Namchuathue4: $('#nam4_edit').val(),
                Giachuathue: gia,
                Giachuathue1: gia1,
                Giachuathue2: gia2,
                Giachuathue3: gia3,
                Giachuathue4: gia4,
                Id: $('#id_edit').val(),
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Cập nhật thông tin thành công!", "Thành công");
                    $('#frm_data').replaceWith(data.message);
                    $(document).ready(function () {
                        TableManaged4.init();
                    });
                    $('#Edit_Modal').modal("hide");
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }

</script>
