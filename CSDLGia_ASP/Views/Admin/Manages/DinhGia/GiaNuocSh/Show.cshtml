                        <td>@(@item.Giachuathue2 != 0 ? item.Giachuathue2 : "")</td>
                        <td>@item.Namchuathue3</td>
                        <td>@(@item.Giachuathue3 != 0 ? item.Giachuathue3 : "")</td>
