    <div class="card card-custom">
        <div class="card-header ribbon ribbon-top ribbon-ver">
            <div class="card-title">
                <h3 class="card-label">
                    Thông tin hồ sơ giá<small>&nbsp;nước sạch sinh hoạt</small>
                </h3>
            </div>
        </div>
        <!--begin::Form-->
        <form asp-controller="Gianuocsh" asp-action="Update" method="post" enctype="multipart/form-data" id="frm_nsh_update">
            <div class="card-body">
                <input hidden asp-for="Madv" />
                <input hidden asp-for="Mahs" />
                <div class="mb-3 font-weight-bold font-size-lg">
                    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ</label>
                </div>
                <div class="row">
                    <div class="col-xl-4">
                        <div class="form-group">
                            <label>Số quyết định</label>
                            <input type="text" class="form-control" asp-for="Soqd" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group">
                            <label>Ngày áp dụng*</label>
                            <input type="date" class="form-control" asp-for="Thoidiem" />
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group">
                            <label>Địa bàn</label>
                            <select class="form-control" id="MaDiaBan" name="MaDiaBan">
                            @foreach (var item in dsdiaban)
                            {
                                <!option value="@item.MaDiaBan" @(@Model.Madiaban==item.MaDiaBan ? "selected" : "" )>@item.TenDiaBan</!option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Lộ trình từ năm*</label>
                        <input type="text" class="form-control" asp-for="Tunam" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Lộ trình đến năm*</label>
                        <input type="text" class="form-control" asp-for="Dennam" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="form-group">
                        <label>Nội dung hồ sơ</label>
                        <input type="text" class="form-control" asp-for="Mota" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>
                            File đính kèm
                            @if (!string.IsNullOrEmpty(Model.Ipf1))
                            {
                                <a href="~/UpLoad/File/DinhGia/@ViewData["Ipf1"]" target="_blank"
                               onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                                    File đính kèm hiện tại
                                </a>
                            }
                        </label>
                        <input type="file" asp-for="Ipf1" accept=".doc, .pdf, .xlsx, .txt, .jpg" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>
                            File đính kèm
                            @if (!string.IsNullOrEmpty(Model.Ipf2))
                            {
                                <a href="~/UpLoad/File/DinhGia/@ViewData["Ipf2"]" target="_blank"
                               onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                                    File đính kèm hiện tại
                                </a>
                            }
                        </label>
                        <input type="file" asp-for="Ipf2" accept=".doc, .pdf, .xlsx, .txt, .jpg" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>
                            File đính kèm
                            @if (!string.IsNullOrEmpty(Model.Ipf3))
                            {
                                <a href="~/UpLoad/File/DinhGia/@ViewData["Ipf3"]" target="_blank"
                               onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                                    File đính kèm hiện tại
                                </a>
                            }
                        </label>
                        <input type="file" asp-for="Ipf3" accept=".doc, .pdf, .xlsx, .txt, .jpg" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>
                            File đính kèm
                            @if (!string.IsNullOrEmpty(Model.Ipf4))
                            {
                                <a href="~/UpLoad/File/DinhGia/@ViewData["Ipf5"]" target="_blank"
                               onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                                    File đính kèm hiện tại
                                </a>
                            }
                        </label>
                        <input type="file" asp-for="Ipf4" accept=".doc, .pdf, .xlsx, .txt, .jpg" class="form-control" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>
                            File đính kèm
                            @if (!string.IsNullOrEmpty(Model.Ipf5))
                            {
                                <a href="~/UpLoad/File/DinhGia/@ViewData["Ipf5"]" target="_blank"
                               onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
                                    File đính kèm hiện tại
                                </a>
                            }
                        </label>
                        <input type="file" asp-for="Ipf5" accept=".doc, .pdf, .xlsx, .txt, .jpg" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!--end::Form-->
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
<div class="card-body" id="frm_data">
    <div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Giá nước sinh hoạt</label>
</div>
    <input type="hidden" class="form-control" id="end" />
    <table class="table table-striped table-bordered table-hover" id="datatable_4">
        <thead>
            <tr style="text-align:center">
                <th rowspan="2" colspan="1">STT</th>
