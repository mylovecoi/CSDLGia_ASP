@{
    int record_id = 1;
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
    int Nam = Int32.Parse(ViewData["Nam"].ToString());
}
@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaNuocSh>

@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });

        $(function () {
            $('#MaDv_Search, #Nam_Search').change(function () {
                var current_path_url = '/GiaNuocSinhHoat?';
                var madv = '&Madv=' + $('#MaDv_Search').val();
                var nam = '&Nam=' + $('#Nam_Search').val();
                var url = current_path_url + madv + nam;
                window.location.href = url;
            })
        });

    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                @ViewData["Title"]
                <span class="d-block text-muted pt-2 font-size-sm">
                    Quản lý thông tin hồ sơ giá nước sạch sinh hoạt
                </span>
            </h3>
        </div>
        <div class="card-toolbar">
            @if (Helpers.CheckPermission(HttpContextAccessor.HttpContext.Session, "csdlmucgiahhdv.dinhgia.nuocsh.thongtin", "Create"))
            {
                @if (ViewData["MaDv"].ToString() != "all")
                {
                    <a class="btn btn-primary font-weight-bolder" asp-controller="GiaNuocSh" asp-action="Create"
                       asp-route-Madv="@ViewData["Madv"]">
                        <i class="la la-plus"></i>Thêm mới
                    </a>
                    <span>&ensp;</span>
                    <a class="btn btn-success font-weight-bolder" asp-controller="GiaNuocSh" asp-action="NhanExcel"
                       asp-route-Madv="@ViewData["Madv"]">
                        <i class="la la-file-excel-o"></i>Nhận dữ liệu
                    </a>
                }
            }

        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">
            <div class="col-xl-3">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Năm</label>
                    <select class="form-control select2basic" id="Nam_Search" name="Nam_Search">
                        <option value="0">--Tất cả--</option>
                        @{
                            int nam_start = DateTime.Now.Year - 5;
                            int nam_stop = DateTime.Now.Year + 1;
                            for (int year = nam_start; year <= nam_stop; year++)
                            {
                                <!option value="@year" @(Nam == year ? "selected" : "")>Năm @year</!option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Đơn vị</label>
                    <select class="form-control select2basic" id="MaDv_Search" name="MaDv_Search">
                        <option value="all">--Tất cả---</option>
                        @foreach (var item in dsdonvi)
                        {
                            <!option value="@item.MaDv" @((string)ViewData["Madv"] == item.MaDv ? "selected" : "")>&emsp;@item.TenDv</!option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th width="2%">#</th>
                    <th width="10%">Đơn vị</th>
                    <th width="10%">Số QĐ</th>
                    <th width="10%">Thời điểm xác định</th>
                    <th style="text-align:center">Mô tả</th>
                    <th width="10%">Trạng thái</th>
                    <th width="20%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center">@(record_id++)</td>
                            <td style="text-align: center">
                                @if (!string.IsNullOrEmpty(item.Madv))
                                    @(dsdonvi.FirstOrDefault(x => x.MaDv == item.Madv)?.TenDv ?? "")

                            </td>
                            <td style="text-align: center">@item.Soqd</td>
                            <td style="text-align: center">@Helpers.ConvertDateToStr(item.Thoidiem)</td>
                            <td style="text-align: left">@item.Mota</td>
                            <td style="text-align: center">
                                <span style="width: 112px;">
                                    @if (item.Trangthai == "CC")
                                    {
                                        <span class="label font-weight-bold label-lg label-xl label-light-info label-inline">Chờ chuyển</span>
                                    }
                                    else if (item.Trangthai == "CD")
                                    {
                                        <span class="label font-weight-bold label-lg label-inline label-light-warning">Chờ duyệt</span>
                                    }
                                    else if (item.Trangthai == "DD")
                                    {
                                        <span class="label font-weight-bold label-lg label-inline label-light-primary">Đã duyệt</span>
                                    }
                                    else if (item.Trangthai == "BTL")
                                    {
                                        <span class="label font-weight-bold label-lg label-inline label-light-danger">Bị trả lại</span>

                                        <br />
                                        <span>Lý do:&nbsp;@item.Lydo</span>
                                    }
                                    else
                                    {
                                        <span class="label font-weight-bold label-lg label-inline label-light-success">Công bố</span>
                                    }
                                </span>
                            </td>
                            <td>
                                <a asp-controller="GiaNuocSh" asp-action="Show" asp-route-Mahs="@item.Mahs" class="btn btn-sm btn-clean btn-icon" title="Xem chi tiết"
                                   target="_blank">
                                    <i class="icon-lg la la-eye text-success"></i>
                                </a>
                                <button type="button" onclick="GetFile('@item.Mahs')" class="btn btn-sm btn-clean btn-icon" title="Giấy tờ kèm theo">
                                    <i class="icon-lg la la-file-alt text-dark"></i>
                                </button>
                                @if (item.Trangthai == "CC" || item.Trangthai == "BTL")
                                {
                                    @if (Helpers.CheckPermission(HttpContextAccessor.HttpContext.Session, "csdlmucgiahhdv.dinhgia.nuocsh.thongtin", "Edit"))
                                    {
                                        <a asp-controller="GiaNuocSh" asp-action="Edit" asp-route-Mahs="@item.Mahs" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                            <i class="icon-lg la la-edit text-primary"></i>
                                        </a>
                                    }
                                    @if (Helpers.CheckPermission(HttpContextAccessor.HttpContext.Session, "csdlmucgiahhdv.dinhgia.nuocsh.thongtin", "Approve"))
                                    {
                                        <button type="button" class="btn btn-sm btn-clean btn-icon" title="Hoàn thành" data-toggle="modal" data-target="#Complete_Modal" onclick="SetComplete('@item.Mahs','@item.Soqd')">
                                            <i class="icon-lg la la-mail-forward text-primary"></i>
                                        </button>
                                    }
                                    @if (Helpers.CheckPermission(HttpContextAccessor.HttpContext.Session, "csdlmucgiahhdv.dinhgia.nuocsh.thongtin", "Delete"))
                                    {

                                        <button type="button" class="btn btn-sm btn-clean btn-icon" title="Xóa" data-toggle="modal" data-target="#Delete_Modal" onclick="SetDelete('@item.Id','@item.Soqd')">
                                            <i class="icon-lg la la-trash text-danger"></i>
                                        </button>
                                    }
                                }
                                <a asp-controller="TrangThaiHoSo" target="_blank" asp-action="Index" asp-route-Mahs="@item.Mahs" class="btn btn-sm btn-clean btn-icon" title="Trạng Thái Hồ Sơ"
                                   target="_blank">
                                    <i class="icon-lg la la-redo-alt text-danger"></i>

                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!--Delete Modal-->
<div class="modal fade" id="Delete_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="GiaNuocSh" asp-action="Delete">
                <div class="modal-header">
                    <h3 class="card-label">
                        @ViewData["Title"]
                        <span class="d-block text-muted pt-2 font-size-sm">
                            Xóa thông tin hồ sơ giá nước sạch sinh hoạt
                        </span>
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group fv-plugins-icon-container">
                                <label>Số QĐ:</label>
                                <label class="form-control" id="soqd_delete" name="soqd_delete"></label>
                            </div>
                        </div>
                    </div>
                    <input id="id_delete" name="id_delete" type="hidden" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-danger font-weight-bold">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--Complete Modal-->
<div class="modal fade" id="Complete_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="GiaNuocSh" asp-action="Complete">
                <div class="modal-header">
                    <h3 class="card-label">
                        @ViewData["Title"]
                        <span class="d-block text-muted pt-2 font-size-sm">
                            Hoàn thành thông tin hồ sơ giá nước sạch sinh hoạt
                        </span>
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <p style="color:blue">Hồ sơ đã hoàn thành sẽ được chuyển lên đơn vị tiếp nhận. Bạn cần liên hệ đơn vị tiếp nhận để chỉnh sửa hồ sơ nếu cần!</p>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group fv-plugins-icon-container">
                                <label>Số QĐ:</label>
                                <label class="form-control" id="soqd_chuyen" name="soqd_chuyen"></label>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="control-label">Hồ sơ:</label>
                                <select class="form-control" id="trangthai_complete" name="trangthai_complete">
                                    <option value="CD">Chờ duyệt</option>
                                    @if (Helpers.CheckPermission(HttpContextAccessor.HttpContext.Session, "csdlmucgiahhdv.dinhgia.nuocsh.xetduyet", "Approve"))
                                    {
                                        <option value="DD">Đã duyệt</option>
                                    }
                                    @if (Helpers.CheckPermission(HttpContextAccessor.HttpContext.Session, "csdlmucgiahhdv.dinhgia.nuocsh.xetduyet", "Public"))
                                    {
                                        <option value="CB">Công bố</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <input id="mahs_complete" name="mahs_complete" type="hidden" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Hoàn thành</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function SetDelete(id, soqd) {
        document.getElementById("id_delete").value = id;
        document.getElementById("soqd_delete").innerHTML = soqd;
    }

    function SetComplete(mahs, soqd) {
        document.getElementById("mahs_complete").value = mahs;
        document.getElementById("soqd_chuyen").innerHTML = soqd;
    }
</script>
@await Html.PartialAsync("~/Views/Admin/Manages/DinhGia/GiaNuocSh/ThongTinGiayTo/Show.cshtml")