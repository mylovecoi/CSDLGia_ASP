@model CSDLGia_ASP.Models.Manages.DinhGia.GiaSpDvCongIch

@{
    int record_id = 1;
    var mahs = ViewData["Mahs"];
    var spcuthedanhmuc = (IEnumerable<GiaSpDvCongIchDm>)ViewData["GiaSpDvCongIchDm"];
}


@*Nhận khi thêm*@
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>

    </div>
    <hr />
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th>STT</th>
                    <th>Hiển thị</th>
                    <th>Danh mục</th>
                    <th>Đơn vị tính</th>
                    <th>Mức giá từ</th>
                    <th>Mức giá đến</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @if (Model.GiaSpDvCongIchCt != null)
                    {
                        @foreach (var item in Model.GiaSpDvCongIchCt.Where(t => t.Capdo == "1"))
                        {
                            <tr>
                                <td style="text-align: center">@(record_id++)</td>
                                <td style="text-align:center">@item.HienThi</td>
                                <td style="text-align:left">@item.Ten</td>
                                <td style="text-align:center">@item.Dvt</td>
                                <td style="text-align:center">@item.Mucgiatu</td>
                                <td style="text-align:center">@item.Mucgiaden</td>
                                <td>
                                    @if(item.NhapGia){
                                        <button type="button" data-target="#Edit_Modal" data-toggle="modal"
                                                onclick="SetEdit(@item.Id)" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                            <i class="icon-lg la la-edit text-primary"></i>
                                        </button>
                                    }
                                    <button type="button" data-target="#Delete_Modal" data-toggle="modal"
                                            onclick="GetDelete(@item.Id)" class="btn btn-sm btn-clean btn-icon" title="Xoá">
                                        <i class="icon-lg la la-trash text-danger"></i>
                                    </button>
                                </td>
                            </tr>
                            @foreach (var item1 in Model.GiaSpDvCongIchCt.Where(t => t.Magoc == item.Maso))
                            {
                                <tr>
                                    <td style="text-align: center">@(record_id++)</td>
                                    <td style="text-align:center">@item1.HienThi</td>
                                    <td style="text-align:left">@item1.Ten</td>
                                    <td style="text-align:center">@item1.Dvt</td>
                                    <td style="text-align:center">@item1.Mucgiatu</td>
                                    <td style="text-align:center">@item1.Mucgiaden</td>
                                    <td>
                                        @if (item1.NhapGia)
                                        {
                                            <button type="button" data-target="#Edit_Modal" data-toggle="modal"
                                                    onclick="SetEdit(@item1.Id)" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                                <i class="icon-lg la la-edit text-primary"></i>
                                            </button>
                                        }
                                        <button type="button" data-target="#Delete_Modal" data-toggle="modal"
                                                onclick="GetDelete(@item1.Id)" class="btn btn-sm btn-clean btn-icon" title="Xoá">
                                            <i class="icon-lg la la-trash text-danger"></i>
                                        </button>
                                    </td>
                                </tr>
                                @foreach (var item2 in Model.GiaSpDvCongIchCt.Where(t => t.Magoc == item1.Maso))
                                {
                                    <tr>
                                        <td style="text-align: center">@(record_id++)</td>
                                        <td style="text-align:center">@item2.HienThi</td>
                                        <td style="text-align:left">@item2.Ten</td>
                                        <td style="text-align:center">@item2.Dvt</td>
                                        <td style="text-align:center">@item2.Mucgiatu</td>
                                        <td style="text-align:center">@item2.Mucgiaden</td>
                                        <td>
                                            @if (item2.NhapGia)
                                            {
                                                <button type="button" data-target="#Edit_Modal" data-toggle="modal"
                                                        onclick="SetEdit(@item2.Id)" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                                    <i class="icon-lg la la-edit text-primary"></i>
                                                </button>
                                            }
                                            <button type="button" data-target="#Delete_Modal" data-toggle="modal"
                                                    onclick="GetDelete(@item2.Id)" class="btn btn-sm btn-clean btn-icon" title="Xoá">
                                                <i class="icon-lg la la-trash text-danger"></i>
                                            </button>
                                        </td>
                                    </tr>

                                }
                            }

                        }
                    }
                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>



@await Html.PartialAsync("~/Views/Admin/Manages/DinhGia/GiaSpDvCongIch/Modal.cshtml")