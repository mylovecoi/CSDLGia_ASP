
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Thông báo</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Loading bootstrap css-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,700&subset=vietnamese' rel='stylesheet' type='text/css'>
    <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,700,300">
    <link type="text/css" rel="stylesheet" href="~/vendors/jquery-ui-1.0.10.4.custom/css/ui-lightness/jquery-ui-1.10.4.custom.min.css">
    <link rel="stylesheet" href="~/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/vendors/bootstrap/css/bootstrap.min.css">
    <!--Loading style vendors-->
    <link rel="stylesheet" href="~/vendors/animate.css/animate.css">
    <!--Loading style-->
    @*<link rel="stylesheet" href="{{ url('css/themes/style1/zvinhtq.css') }}">*@
    <link rel="stylesheet" href="~/css/style-responsive.css">
</head>
<body id="error-page" class="animated bounceInLeft">
    <div id="error-page-content">
        <h1>Lỗi!</h1>
        @if (ViewData["ThongBaoLoi"] == null)
        {
            <h4>
                Thông tin này không thuộc phạm vi quản lý của bạn!
            </h4>
        }
        else
        {
            <h4>
                @ViewData["ThongBaoLoi"]
            </h4>
        }
        @if (ViewData["url"] == null)
        {
            <p>
                <a href="/">Bấm vào đây</a> để quay lại.
            </p>
        }
        else
        {
            <p>
                <a href="@ViewData["url"]">Bấm vào đây</a> để quay lại.
            </p>
        }

    </div>
    @*<script src="~/js/jquery-1.9.1.js"></script>*@
    <script src="~/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <!--loading bootstrap js-->
    <script src="~/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendors/bootstrap-hover-dropdown/bootstrap-hover-dropdown.js"></script>
    <script src="~/js/html5shiv.js"></script>
    <script src="~/js/respond.min.js"></script>
</body>
</html>
